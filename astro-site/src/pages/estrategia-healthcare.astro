<style>
  .page-hero {
    background: linear-gradient(135deg, #1a3865 0%, #2c5282 100%);
    color: #fff;
    padding: 120px 0 80px;
    text-align: center;
  }
  
  .page-hero h1 {
    font-size: 48px;
    margin-bottom: 16px;
  }
  
  @media (max-width: 767px) {
    .page-hero h1 {
      font-size: 32px;
    }
  }
  
  .page-hero .line-divider {
    background: #95cca5;
  }
  
  .page-hero__subtitle {
    font-size: 20px;
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
    line-height: 1.6;
  }
  
  @media (max-width: 767px) {
    .page-hero__subtitle {
      font-size: 16px;
    }
  }
  
  .strategy-section {
    padding: 80px 0;
  }
  
  .strategy-section h2 {
    margin-bottom: 16px;
  }
  
  .strategy-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-top: 40px;
  }
  
  .strategy-card {
    background: #fff;
    border: 1px solid #edf0f7;
    border-radius: 12px;
    padding: 32px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .strategy-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
  }
  
  .strategy-card__icon {
    font-size: 48px;
    display: block;
    margin-bottom: 16px;
  }
  
  .strategy-card h3 {
    font-size: 20px;
    color: #1a3865;
    margin-bottom: 12px;
  }
  
  .strategy-card p {
    font-size: 15px;
    color: #555;
    line-height: 1.6;
  }
  
  .approach-section {
    padding: 80px 0;
  }
  
  .approach-section .row {
    align-items: center;
  }
  
  .approach-section h2 {
    margin-bottom: 16px;
  }
  
  .approach-section p {
    font-size: 17px;
    line-height: 1.7;
    color: #333;
    margin-bottom: 16px;
  }
  
  .approach-image img {
    border-radius: 8px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    width: 100%;
    height: auto;
  }
  
  @media (max-width: 767px) {
    .approach-image {
      margin-top: 32px;
    }
  }
  
  .external-section {
    padding: 80px 0;
  }
  
  .external-section h2 {
    margin-bottom: 16px;
  }
  
  .external-section p {
    max-width: 700px;
    margin: 0 auto 32px;
    font-size: 18px;
    line-height: 1.7;
  }
  
  .btn--external {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }
  
  .btn--external svg {
    transition: transform 0.3s ease;
  }
  
  .btn--external:hover svg {
    transform: translate(2px, -2px);
  }
  
  .cta-section {
    padding: 80px 0;
  }
  
  .cta-section h2 {
    margin-bottom: 16px;
  }
  
  .cta-section p {
    font-size: 18px;
    margin-bottom: 24px;
    color: #555;
  }
</style>

<style>
  .page-hero {
    background: linear-gradient(135deg, #1a3865 0%, #2c5282 100%);
    color: #fff;
    padding: 120px 0 80px;
    text-align: center;
  }
  
  .page-hero__tag {
    display: inline-block;
    background: rgba(149, 204, 165, 0.2);
    color: #95cca5;
    padding: 8px 20px;
    border-radius: 30px;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 1px;
    margin-bottom: 24px;
  }
  
  .page-hero h1 {
    font-size: 48px;
    margin-bottom: 16px;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }
  
  @media (max-width: 767px) {
    .page-hero h1 {
      font-size: 32px;
    }
  }
  
  .page-hero .line-divider {
    background: #95cca5;
  }
  
  .page-hero__subtitle {
    font-size: 20px;
    max-width: 750px;
    margin: 0 auto 32px;
    opacity: 0.9;
    line-height: 1.6;
  }
  
  @media (max-width: 767px) {
    .page-hero__subtitle {
      font-size: 16px;
    }
  }

  .btn--hero {
    background: #95cca5;
    color: #1a3865;
    font-weight: 600;
    padding: 16px 32px;
    border-radius: 8px;
    transition: all 0.3s ease;
    display: inline-block;
  }
  
  .btn--hero:hover {
    background: #fff;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  }
  
  .services-section {
    padding: 80px 0;
    background: var(--color-bg-body);
  }
  
  .services-intro {
    text-align: center;
    font-size: 22px;
    color: #1a3865;
    margin-bottom: 16px;
  }
  
  .services-intro strong {
    color: #2c5282;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 28px;
    margin-top: 48px;
  }
  
  .service-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-theme);
    border-radius: 16px;
    padding: 36px;
    text-align: left;
    box-shadow: 0 4px 24px rgba(0,0,0,0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #1a3865, #95cca5);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .service-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.12);
  }
  
  .service-card:hover::before {
    opacity: 1;
  }
  
  .service-card__icon {
    width: 64px;
    height: 64px;
    object-fit: contain;
    display: block;
    margin-bottom: 20px;
  }

  @media (max-width: 767px) {
    .service-card__icon {
      width: 48px;
      height: 48px;
      margin-bottom: 16px;
    }
  }
  
  .service-card h3 {
    font-size: 20px;
    color: var(--color-heading);
    margin-bottom: 20px;
    line-height: 1.4;
  }
  
  .service-card__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .service-card__list li {
    position: relative;
    padding-left: 24px;
    margin-bottom: 12px;
    font-size: 15px;
    color: var(--color-text-muted);
    line-height: 1.6;
  }
  
  .service-card__list li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: #95cca5;
    font-weight: 600;
  }
  
  .service-card__list li:last-child {
    margin-bottom: 0;
  }
  
  .innovation-section {
    padding: 100px 0;
    background: linear-gradient(180deg, #f8fafc 0%, #edf0f7 100%);
  }
  
  .innovation-icon {
    font-size: 64px;
    margin-bottom: 24px;
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  .innovation-section h2 {
    font-size: 32px;
    color: #1a3865;
    max-width: 800px;
    margin: 0 auto 20px;
    line-height: 1.4;
  }
  
  @media (max-width: 767px) {
    .innovation-section h2 {
      font-size: 24px;
    }
  }
  
  .innovation-text {
    font-size: 18px;
    color: var(--color-text-muted);
    max-width: 750px;
    margin: 24px auto 0;
    line-height: 1.8;
  }
  
  .cta-section {
    background: var(--color-bg-body);
    padding: 80px 0;
  }
  
  .cta-section h2 {
    color: #1a3865;
    margin-bottom: 16px;
  }
  
  .cta-section p {
    font-size: 18px;
    margin-bottom: 28px;
    color: var(--color-text-muted);
  }
  
  .cta-section .btn {
    background: linear-gradient(135deg, #1a3865 0%, #2c5282 100%);
    color: #fff;
    padding: 16px 36px;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
  }
  
  .cta-section .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(26, 56, 101, 0.3);
  }
</style>

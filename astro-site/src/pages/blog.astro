---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Blog Schema for SEO
const blogSchema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Blog de Synuptic",
  "description": "Artículos sobre medical writing, estrategia healthcare y comunicación científica. Insights del sector farmacéutico y biotecnológico.",
  "publisher": {
    "@type": "Organization",
    "name": "Sinergias en Salud S.L.",
    "logo": {
      "@type": "ImageObject",
      "url": "/images/synuptic-logo.png"
    }
  }
};

// Categories for the blog filter (ready for future use)
const categories = [
  { id: 'all', name: 'Todos' },
  { id: 'medical-writing', name: 'Medical Writing' },
  { id: 'healthcare-strategy', name: 'Healthcare Strategy' },
  { id: 'comunicacion-cientifica', name: 'Comunicación Científica' },
  { id: 'tendencias', name: 'Tendencias' }
];
---

<Layout 
  title="Blog de Medical Writing y Comunicación Científica"
  description="Artículos sobre redacción médica, estrategia healthcare y tendencias del sector farmacéutico. Insights para agencias de comunicación y profesionales de la salud."
  jsonld={blogSchema}
>
  <div id="wrap_all">
    <Header />
    
    <main id="main-content">
      <!-- Hero Section - Premium Blog Header -->
      <section class="blog-hero">
        <!-- Animated Gradient Background -->
        <div class="hero-gradient"></div>
        
        <!-- Floating Particles -->
        <div class="floating-particles">
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
        </div>
        
        <!-- Decorative Elements -->
        <div class="hero-decoration">
          <div class="deco-circle deco-circle--1"></div>
          <div class="deco-circle deco-circle--2"></div>
        </div>
        
        <div class="cesis_container hero-content-wrapper">
          <span class="blog-hero__tag">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 19l7-7 3 3-7 7-3-3z"></path>
              <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"></path>
              <path d="M2 2l7.586 7.586"></path>
              <circle cx="11" cy="11" r="2"></circle>
            </svg>
            BLOG SYNUPTIC
          </span>
          <h1 class="hero-title">
            <span class="title-line title-line-1">Insights sobre</span>
            <span class="title-line title-line-2">Medical Writing &</span>
            <span class="title-line title-line-3 highlight">Healthcare Strategy</span>
          </h1>
          <div class="hero-divider">
            <span class="divider-line"></span>
            <span class="divider-icon">✦</span>
            <span class="divider-line"></span>
          </div>
          <p class="blog-hero__subtitle">
            Exploramos las últimas <strong>tendencias</strong>, compartimos <strong>conocimiento</strong> y ofrecemos nuestra perspectiva sobre el mundo de la comunicación científica y la estrategia en salud.
          </p>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="scroll-indicator">
          <div class="scroll-mouse">
            <div class="scroll-wheel"></div>
          </div>
          <span class="scroll-text">Explorar</span>
        </div>
      </section>

      <!-- Filter Categories Section -->
      <section class="categories-section">
        <div class="cesis_container">
          <div class="categories-wrapper">
            <nav class="categories-nav" aria-label="Categorías del blog">
              {categories.map((cat, index) => (
                <button 
                  class={`category-btn ${cat.id === 'all' ? 'active' : ''}`}
                  data-category={cat.id}
                  style={`--cat-delay: ${index * 0.05}s`}
                >
                  <span>{cat.name}</span>
                </button>
              ))}
            </nav>
            <div class="search-wrapper">
              <div class="search-box">
                <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="11" cy="11" r="8"></circle>
                  <path d="M21 21l-4.35-4.35"></path>
                </svg>
                <input type="text" placeholder="Buscar artículos..." class="search-input" aria-label="Buscar artículos" />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Blog Posts Grid Section (Ready for Articles) -->
      <section class="blog-posts-section" id="articles">
        <div class="cesis_container">
          <!-- Empty State - Show when no articles -->
          <div class="empty-state">
            <div class="empty-state__icon">
              <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 19l7-7 3 3-7 7-3-3z"></path>
                <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"></path>
                <path d="M2 2l7.586 7.586"></path>
                <circle cx="11" cy="11" r="2"></circle>
              </svg>
            </div>
            <h2 class="empty-state__title">Próximamente</h2>
            <p class="empty-state__text">
              Estamos preparando artículos increíbles sobre medical writing, estrategia healthcare y comunicación científica. ¡Vuelve pronto!
            </p>
            <div class="empty-state__decoration">
              <span class="deco-line"></span>
              <span class="deco-dot"></span>
              <span class="deco-line"></span>
            </div>
          </div>

          <!-- Blog Grid (Hidden until articles are added) -->
          <div class="blog-grid" style="display: none;">
            <!-- Articles will be dynamically inserted here -->
          </div>

          <!-- Pagination (Hidden until articles are added) -->
          <nav class="pagination" aria-label="Paginación del blog" style="display: none;">
            <button class="pagination-btn prev" disabled>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
            </button>
            <div class="pagination-numbers">
              <span class="pagination-page active">1</span>
            </div>
            <button class="pagination-btn next" disabled>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </nav>
        </div>
      </section>

      <!-- Newsletter CTA Section -->
      <section class="newsletter-section">
        <div class="newsletter-bg">
          <div class="newsletter-pattern"></div>
          <div class="newsletter-particles">
            <span class="news-particle"></span>
            <span class="news-particle"></span>
            <span class="news-particle"></span>
          </div>
        </div>
        <div class="cesis_container text-center">
          <span class="newsletter-tag">MANTENTE INFORMADO</span>
          <h2 class="newsletter-title">¿Quieres recibir nuestros artículos?</h2>
          <p class="newsletter-text">
            Suscríbete y recibe las últimas novedades sobre medical writing y estrategia healthcare directamente en tu bandeja de entrada.
          </p>
          <div class="newsletter-form">
            <div class="newsletter-input-wrapper">
              <svg class="newsletter-input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              <input type="email" placeholder="tu@email.com" class="newsletter-input" aria-label="Email para newsletter" />
            </div>
            <button type="submit" class="btn btn--newsletter">
              <span>Suscribirme</span>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
          <p class="newsletter-disclaimer">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            Sin spam. Cancela cuando quieras.
          </p>
        </div>
      </section>

    </main>
    
    <Footer />
  </div>
</Layout>

<script>
  function initBlogPage() {
    // Category filter functionality
    const categoryBtns = document.querySelectorAll('.category-btn');
    categoryBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        categoryBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        // Future: Filter articles by category
      });
    });

    // Search functionality (ready for future implementation)
    const searchInput = document.querySelector('.search-input') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value;
        // Future: Filter articles by search query
        console.log('Searching for:', query);
      });
    }

    // Scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);
    
    // Observe elements for animation
    document.querySelectorAll('.blog-card, .empty-state, .newsletter-section').forEach(el => {
      observer.observe(el);
    });
  }
  
  initBlogPage();
  document.addEventListener('astro:page-load', initBlogPage);
</script>

<style>

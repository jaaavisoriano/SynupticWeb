    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 120px 0 80px;
  }
  
  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg, 
      #0a1628 0%, 
      #1a3865 25%, 
      #0f2240 50%, 
      #1a3865 75%, 

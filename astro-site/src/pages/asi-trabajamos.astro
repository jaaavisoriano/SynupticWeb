---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const modelos = [
  {
    icon: '/images/icon_presupuesto.png',
    title: 'Presupuesto por proyecto',
    description: 'El clásico en el sector. Tu cliente te pide y tú nos cuentas qué necesitas.'
  },
  {
    icon: '/images/icon_bolsa_horas.png',
    title: 'Bolsa de horas científicas',
    description: 'Si tienes varios frentes abiertos donde necesites soporte del departamento médico, puedes elegir un pack a tu medida.'
  },
  {
    icon: '/images/icon_implant.png',
    title: 'Implant científico temporal',
    description: 'Si tienes una baja en el equipo médico o buscas cubrir un puesto de redacción científica de manera temporal.'
  },
  {
    icon: '/images/icon_mentoring.png',
    title: 'Fee mensual de mentoring científico',
    description: 'Si tu equipo científico es junior y necesita la sombra de un buen maestro para florecer con energía.'
  }
];

const ventajas = [
  {
    icon: '/images/icon_vision_global.png',
    title: 'Visión global del proyecto'
  },
  {
    icon: '/images/icon_respuesta_rapida.png',
    title: 'Respuesta rápida ante imprevistos'
  },
  {
    icon: '/images/icon_cobertura.png',
    title: 'Cobertura 100% de necesidades'
  },
  {
    icon: '/images/icon_inteligencia.png',
    title: 'Inteligencia colaborativa'
  }
];
---

<Layout 
  title="Así Trabajamos - Synuptic"
  description="Conoce cómo trabajamos: soluciones rápidas y precisas para agencias. Modelos flexibles de contratación adaptados a tus necesidades."
>
  <div id="wrap_all">
    <Header />
    
    <main id="main-content">
      <!-- Hero Section -->
      <section class="page-hero">
        <div class="cesis_container">
          <h1>Trabajamos para ofrecer soluciones rápidas y precisas</h1>
          <div class="line-divider center"></div>
          <p class="page-hero__subtitle">
            Conocemos el ritmo frenético de las agencias. Por eso, procuramos que contratarnos no te suponga un esfuerzo extra.
          </p>
          <p class="page-hero__lema">¡Siente la sinapsis!</p>
        </div>
      </section>

      <!-- Modelos de Contratación -->
      <section class="section modelos-section">
        <div class="cesis_container">
          <h2 class="text-center">Cómo activar la sinapsis</h2>
          <div class="line-divider center"></div>
          
          <div class="modelos-grid">
            {modelos.map((modelo) => (
              <div class="modelo-card">
                <img src={modelo.icon} alt={modelo.title} class="modelo-icon" />
                <h3>{modelo.title}</h3>
                <p>{modelo.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Social Proof Section -->
      <section class="section section--gray social-proof-section">
        <div class="cesis_container text-center">
          <p class="social-proof__highlight">
            Desde 2015... <span class="highlight-number">más de 30 agencias y consultoras</span> ya han confiado en nuestra experiencia
          </p>
          <p class="social-proof__question">¿Quieres ser la siguiente?</p>
          <a href="/#contact" class="btn">
            <span class="btn-icon">✉</span>
            <span>Contactar</span>
          </a>
        </div>
      </section>

      <!-- Ventajas Section -->
      <section class="section ventajas-section">
        <div class="cesis_container">
          <h2 class="text-center">Contar con nosotros son todo ventajas, la ciencia dejará de darte dolor de cabeza</h2>
          <div class="line-divider center"></div>
          
          <div class="ventajas-grid">
            {ventajas.map((ventaja) => (
              <div class="ventaja-item">
                <img src={ventaja.icon} alt={ventaja.title} class="ventaja-icon" />
                <span class="ventaja-title">{ventaja.title}</span>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="section section--gray cta-section">
        <div class="cesis_container text-center">
          <h2>¿Empezamos?</h2>
          <div class="line-divider center"></div>
          <p>Cuéntanos tu proyecto y comenzamos con el primer paso.</p>
          <a href="/#contact" class="btn">
            <span class="btn-icon">✉</span>
            <span>Contactar</span>
          </a>
        </div>
      </section>
    </main>
    
    <Footer />
  </div>
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, #1a3865 0%, #2c5282 100%);
    color: #fff;
    padding: 120px 0 80px;
    text-align: center;
  }
  
  .page-hero h1 {
    font-size: 42px;
    margin-bottom: 16px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.2;
  }
  
  @media (max-width: 767px) {
    .page-hero h1 {
      font-size: 28px;
    }
  }
  
  .page-hero .line-divider {
    background: #95cca5;
  }
  
  .page-hero__subtitle {
    font-size: 20px;
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
    line-height: 1.6;
  }
  
  @media (max-width: 767px) {
    .page-hero__subtitle {
      font-size: 16px;
    }
  }
  
  .page-hero__lema {
    font-size: 28px;
    font-weight: 700;
    color: #95cca5;
    margin-top: 24px;
    font-style: italic;
  }
  
  @media (max-width: 767px) {
    .page-hero__lema {
      font-size: 22px;
    }
  }
  
  /* Modelos de Contratación */
  .modelos-section {
    padding: 80px 0;
  }
  
  .modelos-section h2 {
    margin-bottom: 16px;
  }
  
  .modelos-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    margin-top: 40px;
  }
  
  @media (max-width: 767px) {
    .modelos-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .modelo-card {
    background: var(--color-bg, #fff);
    border: 1px solid var(--color-border, #edf0f7);
    border-radius: 16px;
    padding: 32px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .modelo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
  }
  
  .modelo-icon {
    width: 80px;
    height: 80px;
    object-fit: contain;
    display: block;
    margin: 0 auto 16px;
  }
  
  .modelo-card h3 {
    font-size: 20px;
    color: var(--color-primary, #1a3865);
    margin-bottom: 12px;
  }
  
  .modelo-card p {
    font-size: 15px;
    color: var(--color-text-secondary, #555);
    line-height: 1.6;
    margin: 0;
  }
  
  /* Social Proof */
  .social-proof-section {
    padding: 80px 0;
  }
  
  .social-proof__highlight {
    font-size: 28px;
    line-height: 1.5;
    color: var(--color-text, #333);
    max-width: 800px;
    margin: 0 auto 24px;
  }
  
  @media (max-width: 767px) {
    .social-proof__highlight {
      font-size: 22px;
    }
  }
  
  .highlight-number {
    color: var(--color-accent, #95cca5);
    font-weight: 700;
  }
  
  .social-proof__question {
    font-size: 24px;
    font-weight: 600;
    color: var(--color-primary, #1a3865);
    margin-bottom: 32px;
  }
  
  @media (max-width: 767px) {
    .social-proof__question {
      font-size: 20px;
    }
  }
  
  /* Ventajas */
  .ventajas-section {
    padding: 80px 0;
  }
  
  .ventajas-section h2 {
    margin-bottom: 16px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .ventajas-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 32px;
    margin-top: 48px;
  }
  
  @media (max-width: 991px) {
    .ventajas-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 575px) {
    .ventajas-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .ventaja-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 16px;
  }
  
  .ventaja-icon {
    width: 100px;
    height: 100px;
    object-fit: contain;
    display: block;
    padding: 15px;
    background: linear-gradient(135deg, rgba(149,204,165,0.15) 0%, rgba(26,56,101,0.1) 100%);
    border-radius: 50%;
    transition: transform 0.3s ease;
  }
  
  .ventaja-item:hover .ventaja-icon {
    transform: scale(1.1);
  }
  
  .ventaja-title {
    font-size: 17px;
    font-weight: 600;
    color: var(--color-text, #333);
    line-height: 1.4;
  }
  
  /* CTA */
  .cta-section {
    padding: 80px 0;
  }
  
  .cta-section h2 {
    margin-bottom: 16px;
  }
  
  .cta-section p {
    font-size: 18px;
    margin-bottom: 24px;
    color: var(--color-text-secondary, #555);
  }
</style>

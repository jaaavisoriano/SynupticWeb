<script>
  // Timeline Scroll Animation
  let timelineScrollHandler = null;
  let timelineResizeHandler = null;
  let timelineObserver = null;
  
  function initTimelineAnimation() {
    const timelineSteps = document.querySelectorAll('.timeline-step');
    const timelineLineProgress = document.querySelector('.timeline-line-progress');
    const timelineContainer = document.querySelector('.timeline-container');
    const timelineLine = document.querySelector('.timeline-line');
    
    if (!timelineSteps.length || !timelineLineProgress || !timelineContainer) return;
    
    // Clean up previous event listeners if they exist
    if (timelineScrollHandler) {
      window.removeEventListener('scroll', timelineScrollHandler);
    }
    if (timelineResizeHandler) {
      window.removeEventListener('resize', timelineResizeHandler);
    }
    if (timelineObserver) {
      timelineObserver.disconnect();
    }
    
    // Reset timeline state for fresh navigation
    timelineLineProgress.style.height = '0%';
    timelineSteps.forEach((step) => {
      step.classList.remove('is-visible', 'is-active');
    });
    
    // Intersection Observer for steps visibility
    timelineObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, {
      threshold: 0.3,
      rootMargin: '0px 0px -10% 0px'
    });
    
    timelineSteps.forEach((step) => {
      timelineObserver.observe(step);
    });
    
    // Progress line animation and node activation on scroll
    const updateProgressAndNodes = () => {
      const containerRect = timelineContainer.getBoundingClientRect();
      const containerTop = containerRect.top;
      const containerHeight = containerRect.height;
      const windowHeight = window.innerHeight;
      
      // Calculate how much of the timeline is scrolled through
      const scrollProgress = Math.max(0, Math.min(1, 
        (windowHeight * 0.5 - containerTop) / containerHeight
      ));
      
      timelineLineProgress.style.height = `${scrollProgress * 100}%`;
      
      // Get the absolute position of the progress line end
      const lineRect = timelineLine ? timelineLine.getBoundingClientRect() : containerRect;
      const progressEndY = lineRect.top + (lineRect.height * scrollProgress);
      
      // Check each node and activate/deactivate based on progress position
      timelineSteps.forEach((step, index) => {
        const node = step.querySelector('.timeline-node');
        if (!node) return;
        
        const nodeRect = node.getBoundingClientRect();
        const nodeCenter = nodeRect.top + (nodeRect.height / 2);
        
        // Node is active if progress line has passed its center
        if (progressEndY >= nodeCenter) {
          step.classList.add('is-active');
        } else {
          step.classList.remove('is-active');
        }
      });
    };
    
    // Store handlers for cleanup
    timelineScrollHandler = updateProgressAndNodes;
    timelineResizeHandler = updateProgressAndNodes;
    
    // Initial call and scroll listener
    updateProgressAndNodes();
    window.addEventListener('scroll', timelineScrollHandler, { passive: true });
    window.addEventListener('resize', timelineResizeHandler, { passive: true });
  }
  

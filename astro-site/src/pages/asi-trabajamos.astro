---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

// Import local assets
import imgPresupuesto from '../assets/icon_presupuesto.png';
import imgBolsa from '../assets/icon_bolsa_horas.png';
import imgImplant from '../assets/icon_implant.png';
import imgMentoring from '../assets/icon_mentoring.png';
import imgVision from '../assets/icon_vision_global.png';
import imgRespuesta from '../assets/icon_respuesta_rapida.png';
import imgCobertura from '../assets/icon_cobertura.png';
import imgInteligencia from '../assets/icon_inteligencia.png';

const modelos = [
  {
    icon: imgPresupuesto,
    title: 'Presupuesto por proyecto',
    description: 'El clásico en el sector. Tu cliente te pide y tú nos cuentas qué necesitas.'
  },
  {
    icon: imgBolsa,
    title: 'Bolsa de horas científicas',
    description: 'Si tienes varios frentes abiertos donde necesites soporte del departamento médico, puedes elegir un pack a tu medida.'
  },
  {
    icon: imgImplant,
    title: 'Implant científico temporal',
    description: 'Si tienes una baja en el equipo médico o buscas cubrir un puesto de redacción científica de manera temporal.'
  },
  {
    icon: imgMentoring,
    title: 'Fee mensual de mentoring científico',
    description: 'Si tu equipo científico es junior y necesita la sombra de un buen maestro para florecer con energía.'
  }
];

const ventajas = [
  {
    icon: imgVision,
    title: 'Visión global del proyecto'
  },
  {
    icon: imgRespuesta,
    title: 'Respuesta rápida ante imprevistos'
  },
  {
    icon: imgCobertura,
    title: 'Cobertura 100% de necesidades'
  },
  {
    icon: imgInteligencia,
    title: 'Inteligencia colaborativa'
  }
];
---

<Layout 
  title="Así Trabajamos"
  description="Conoce cómo trabajamos: soluciones rápidas y precisas para agencias. Modelos flexibles de contratación adaptados a tus necesidades."
>
  <div id="wrap_all">
    <Header />
    
    <main id="main-content">
      <!-- Premium Hero Section -->
      <section class="premium-hero">
        <!-- Animated Gradient Background -->
        <div class="hero-gradient"></div>
        
        <!-- Floating Particles -->
        <div class="floating-particles">
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
        </div>
        
        <!-- Decorative Elements -->
        <div class="hero-decoration">
          <div class="deco-circle deco-circle--1"></div>
          <div class="deco-circle deco-circle--2"></div>
        </div>
        
        <div class="cesis_container">
          <div class="hero-content">
            <span class="hero-eyebrow">Nuestro método</span>
            <h1 class="hero-title">
              <span class="title-line title-line--1">Trabajamos para ofrecer</span>
              <span class="title-line title-line--2">soluciones <em>rápidas</em> y <em>precisas</em></span>
            </h1>
            <div class="hero-divider"></div>
            <p class="hero-subtitle">
              Conocemos el ritmo frenético de las agencias. Por eso, procuramos que contratarnos no te suponga un esfuerzo extra.
            </p>
            <button type="button" onclick="window.openContactModal()" class="hero-lema">¡Siente la sinapsis!</button>
            
            <!-- Scroll Indicator -->
            <div class="scroll-indicator" aria-hidden="true">
              <div class="scroll-mouse">
                <div class="scroll-wheel"></div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Modelos de Contratación - Premium Cards -->
      <section class="section modelos-section">
        <div class="cesis_container">
          <div class="section-header">
            <span class="section-eyebrow">Flexibilidad total</span>
            <h2>Cómo activar la sinapsis</h2>
            <div class="line-divider center"></div>
          </div>
          
          <div class="modelos-grid">
            {modelos.map((modelo, index) => (
              <div class="modelo-card" style={`--delay: ${index * 0.1}s`}>
                <div class="card-glow"></div>
                <div class="card-icon-wrapper">
                  <Image src={modelo.icon} alt={modelo.title} class="modelo-icon" width={80} />
                </div>
                <h3>{modelo.title}</h3>
                <p>{modelo.description}</p>
                <div class="card-accent"></div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Social Proof Section - Premium Connected Design -->
      <section class="section social-proof-section">
        <!-- Animated Gradient Background (Matches Hero) -->
        <div class="hero-gradient"></div>
        
        <!-- Floating Particles (Matches Hero) -->
        <div class="floating-particles">
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
          <span class="particle"></span>
        </div>

        <!-- Top Wave Divider -->
        <div class="shape-divider-top">
          <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
          </svg>
        </div>

        <div class="cesis_container z-relative">
          <div class="proof-card glass-effect">
            <div class="proof-content">
              <div class="proof-stats">
                <div class="stat-item">
                  <span class="stat-label">Experiencia</span>
                  <div class="number-wrapper">
                    <span class="proof-number">Desde</span>
                    <span class="proof-number big">2015</span>
                  </div>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                  <span class="stat-label">Confianza</span>
                  <div class="number-wrapper">
                    <span class="proof-number big">+30</span>
                    <span class="proof-number">Agencias</span>
                  </div>
                </div>
              </div>
              
              <div class="proof-separator"></div>
              
              <div class="proof-message">
                <p class="proof-text">
                  Ya han confiado en nuestra experiencia para elevar sus proyectos científicos.
                </p>
                <p class="proof-question">¿Quieres ser la siguiente?</p>

                
                <button type="button" onclick="window.openContactModal()" class="btn-premium btn-wide" aria-label="Abrir formulario de contacto">
                  <span class="btn-icon">✉</span>
                  <span>Contactar ahora</span>
                  <div class="btn-glow"></div>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Bottom Wave Divider -->
        <div class="shape-divider-bottom">
          <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
          </svg>
        </div>
      </section>

      <!-- Ventajas Section - Premium Icons -->
      <section class="section ventajas-section">
        <div class="cesis_container">
          <div class="section-header">
            <span class="section-eyebrow">Por qué elegirnos</span>
            <h2>Contar con nosotros son todo ventajas</h2>
            <p class="section-subtitle">La ciencia dejará de darte dolor de cabeza</p>
            <div class="line-divider center"></div>
          </div>
          
          <div class="ventajas-grid">
            {ventajas.map((ventaja, index) => (
              <div class="ventaja-item" style={`--delay: ${index * 0.15}s`}>
                <div class="ventaja-icon-wrapper">
                  <div class="icon-bg"></div>
                  <Image src={ventaja.icon} alt={ventaja.title} class="ventaja-icon" width={70} />
                  <div class="icon-ring"></div>
                </div>
                <span class="ventaja-title">{ventaja.title}</span>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- CTA Section - Premium Design -->
      <section class="section cta-section">
        <div class="cta-bg">
          <div class="cta-pattern"></div>
        </div>
        <div class="cesis_container">
          <div class="cta-content">
            <h2>¿Empezamos?</h2>
            <div class="line-divider center light"></div>
            <p>Cuéntanos tu proyecto y comenzamos con el primer paso.</p>
            <button type="button" onclick="window.openContactModal()" class="btn-premium btn-premium--light" aria-label="Abrir formulario de contacto">
              <span class="btn-icon">✉</span>
              <span>Contactar</span>
              <div class="btn-glow"></div>
            </button>
          </div>
        </div>
      </section>
    </main>
    
    <Footer />
  </div>
</Layout>

<style>
  /* ===== PREMIUM HERO ===== */
  .premium-hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 120px 0 80px;
  }
  
  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg, 
      #0a1628 0%, 
      var(--color-primary) 25%, 
      #0f2240 50%, 
      var(--color-primary) 75%, 
      #0a1628 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 12s ease-in-out infinite;
  }
  
  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .floating-particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }
  
  .particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: rgba(149, 204, 165, 0.4);
    border-radius: 50%;
    animation: float 8s ease-in-out infinite;
  }
  
  .particle:nth-child(1) { left: 10%; top: 20%; animation-delay: 0s; }
  .particle:nth-child(2) { left: 80%; top: 30%; animation-delay: 1.5s; }
  .particle:nth-child(3) { left: 30%; top: 70%; animation-delay: 3s; }
  .particle:nth-child(4) { left: 60%; top: 80%; animation-delay: 4.5s; }
  .particle:nth-child(5) { left: 90%; top: 60%; animation-delay: 6s; }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0) scale(1);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-40px) translateX(-20px) scale(1.5);
      opacity: 0.8;
    }
  }
  
  .hero-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .deco-circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
  }
  
  .deco-circle--1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);
    top: -200px;
    right: -150px;
  }
  
  .deco-circle--2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);
    bottom: -150px;
    left: -100px;
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .hero-eyebrow {
    display: inline-block;
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: var(--color-accent);
    margin-bottom: 20px;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 0.2s;
  }
  
  .hero-title {
    font-family: 'Raleway', sans-serif;
    font-size: clamp(28px, 5vw, 48px);
    font-weight: 700;
    color: var(--color-white);
    line-height: 1.2;
    margin-bottom: 24px;
  }
  
  .title-line {
    display: block;
  }
  
  .title-line--1 {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease forwards 0.3s;
  }
  
  .title-line--2 {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease forwards 0.5s;
  }
  
  .title-line--2 em {
    font-style: normal;
    color: var(--color-accent);
    position: relative;
  }
  
  .hero-divider {
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
    margin: 0 auto 24px;
    opacity: 0;
    animation: fadeInScale 0.6s ease forwards 0.7s;
  }
  
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scaleX(0);
    }
    to {
      opacity: 1;
      transform: scaleX(1);
    }
  }
  
  .hero-subtitle {
    font-size: clamp(16px, 2.5vw, 20px);
    color: rgba(255, 255, 255, 0.85);
    max-width: 700px;
    margin: 0 auto 24px;
    line-height: 1.7;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 0.8s;
  }
  
  .hero-lema {
    font-size: clamp(22px, 3vw, 32px);
    font-weight: 700;
    color: var(--color-accent);
    font-style: italic;
    margin: 0;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 1s;
    text-shadow: 0 0 30px rgba(149, 204, 165, 0.3);
    
    /* Button styles reset */
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .hero-lema:hover {
    transform: scale(1.05) translateY(0) !important; 
    color: #ffffff;
    text-shadow: 0 0 40px rgba(149, 204, 165, 0.6);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: -60px;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 1.3s;
  }
  
  .scroll-mouse {
    width: 26px;
    height: 42px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 15px;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }
  
  .scroll-wheel {
    width: 4px;
    height: 8px;
    background: var(--color-accent);
    border-radius: 2px;
    animation: scrollWheel 2s ease-in-out infinite;
  }
  
  @keyframes scrollWheel {
    0%, 100% { opacity: 1; transform: translateY(0); }
    50% { opacity: 0.3; transform: translateY(10px); }
  }
  
  /* ===== SECTIONS ===== */
  .section-header {
    text-align: center;
    margin-bottom: 48px;
  }
  
  .section-eyebrow {
    display: inline-block;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-accent);
    margin-bottom: 12px;
  }
  
  .section-subtitle {
    font-size: 18px;
    color: var(--color-text-muted);
    margin-top: 8px;
    margin-bottom: 16px;
  }
  
  /* ===== MODELOS SECTION ===== */
  .modelos-section {
    padding: 100px 0;
    background: var(--color-bg-body);
  }
  
  .modelos-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 28px;
  }
  
  @media (max-width: 767px) {
    .modelos-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .modelo-card {
    position: relative;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-theme);
    border-radius: 20px;
    padding: 40px 32px;
    text-align: center;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0;
    transform: translateY(30px);
    animation: cardReveal 0.8s ease forwards;
    animation-delay: var(--delay);
  }
  
  @keyframes cardReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .modelo-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
    border-color: rgba(149, 204, 165, 0.3);
  }
  
  .card-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at center, rgba(149, 204, 165, 0.1) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }
  
  .modelo-card:hover .card-glow {
    opacity: 1;
  }
  
  .card-icon-wrapper {
    position: relative;
    display: inline-block;
    margin-bottom: 20px;
  }
  
  .modelo-icon {
    width: 80px;
    height: 80px;
    object-fit: contain;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .modelo-card:hover .modelo-icon {
    transform: scale(1.1) translateY(-5px);
  }
  
  .modelo-card h3 {
    font-size: 20px;
    color: var(--color-heading);
    margin-bottom: 12px;
    transition: color 0.3s ease;
  }
  
  .modelo-card:hover h3 {
    color: var(--color-primary);
  }
  
  .modelo-card p {
    font-size: 15px;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }
  
  .card-accent {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    transition: width 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    border-radius: 3px 3px 0 0;
  }
  
  .modelo-card:hover .card-accent {
    width: 80%;
  }
  
  /* ===== SOCIAL PROOF SECTION ===== */
  .social-proof-section {
    position: relative;
    padding: 180px 0; 
    overflow: hidden;
    background: #0a1628; 
    color: var(--color-white);
  }
  
  .z-relative {
    position: relative;
    z-index: 10;
  }

  /* Shape Dividers - Smooth Connection */
  .shape-divider-top {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
  }

  .shape-divider-top svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 80px;
    transform: rotateY(180deg);
  }

  .shape-divider-top .shape-fill {
    fill: var(--color-bg-body, #ffffff);
  }

  .shape-divider-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
  }

  .shape-divider-bottom svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 80px;
    transform: rotateY(180deg);
  }

  .shape-divider-bottom .shape-fill {
    fill: var(--color-bg-body, #ffffff);
  }
  
  .proof-card {
    position: relative;
    border-radius: 30px;
    padding: 60px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .glass-effect {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .proof-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
  }
  
  .proof-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  }
  
  .proof-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 60px;
  }
  
  .proof-stats {
    display: flex;
    align-items: center;
    gap: 40px;
    flex: 1;
  }
  
  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .stat-label {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: var(--color-accent);
    font-weight: 700;
  }
  
  .number-wrapper {
    display: flex;
    flex-direction: column;
    line-height: 1;
  }
  
  .proof-number {
    font-size: 24px;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 300;
  }
  
  .proof-number.big {
    font-size: clamp(48px, 6vw, 80px);
    font-weight: 800;
    background: linear-gradient(135deg, #ffffff 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 5px 0;
  }
  
  .stat-divider {
    width: 1px;
    height: 100px;
    background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.2), transparent);
  }
  
  .proof-separator {
    width: 2px;
    height: 120px;
    background: linear-gradient(to bottom, transparent, var(--color-accent), transparent);
    opacity: 0.3;
  }
  
  .proof-message {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
  }
  
  .proof-text {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    max-width: 500px;
  }
  
  .proof-question {
    font-family: 'Raleway', sans-serif;
    font-size: 28px;
    font-weight: 700;
    color: #ffffff;
    margin: 10px 0;
  }
  
  .btn-wide {
    padding-left: 48px;
    padding-right: 48px;
    margin-top: 10px;
  }
  
  @media (max-width: 991px) {
    .proof-content {
      flex-direction: column;

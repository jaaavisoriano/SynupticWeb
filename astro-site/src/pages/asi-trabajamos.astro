<style>
  .page-hero {
    background: linear-gradient(135deg, #1a3865 0%, #2c5282 100%);
    color: #fff;
    padding: 120px 0 80px;
    text-align: center;
  }
  
  .page-hero h1 {
    font-size: 48px;
    margin-bottom: 16px;
  }
  
  @media (max-width: 767px) {
    .page-hero h1 {
      font-size: 32px;
    }
  }
  
  .page-hero .line-divider {
    background: #95cca5;
  }
  
  .page-hero__subtitle {
    font-size: 20px;
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
    line-height: 1.6;
  }
  
  @media (max-width: 767px) {
    .page-hero__subtitle {
      font-size: 16px;
    }
  }
  
  .process-section {
    padding: 80px 0;
  }
  
  .timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(180deg, #95cca5 0%, #1a3865 100%);
    border-radius: 2px;
  }
  
  @media (max-width: 767px) {
    .timeline::before {
      left: 20px;
    }
  }
  
  .timeline-item {
    position: relative;
    padding: 20px 0;
    width: 50%;
  }
  
  .timeline-item.left {
    padding-right: 50px;
    text-align: right;
  }
  
  .timeline-item.right {
    left: 50%;
    padding-left: 50px;
    text-align: left;
  }
  
  @media (max-width: 767px) {
    .timeline-item,
    .timeline-item.left,
    .timeline-item.right {
      width: 100%;
      left: 0;
      padding-left: 60px;
      padding-right: 0;
      text-align: left;
    }
  }
  
  .timeline-content {
    background: #fff;
    border: 1px solid #edf0f7;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    position: relative;
  }
  
  .timeline-number {
    font-family: 'Playfair Display', serif;
    font-size: 48px;
    font-weight: 700;
    color: #95cca5;
    opacity: 0.5;
    position: absolute;
    top: -10px;
    right: 16px;
  }
  
  .timeline-item.right .timeline-number {
    left: 16px;
    right: auto;
  }
  
  @media (max-width: 767px) {
    .timeline-number {
      right: 16px;
      left: auto;
    }
  }
  
  .timeline-content h3 {
    font-size: 22px;
    color: #1a3865;
    margin-bottom: 12px;
  }
  
  .timeline-content p {
    font-size: 15px;
    color: #555;
    line-height: 1.6;
    margin: 0;
  }
  
  .values-section {
    padding: 80px 0;
  }
  
  .values-section h2 {
    margin-bottom: 16px;
  }
  
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-top: 40px;
  }
  
  .value-card {
    background: #fff;
    border-radius: 12px;
    padding: 32px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
  }
  
  .value-card h3 {
    font-size: 20px;
    color: #1a3865;
    margin-bottom: 12px;
  }
  
  .value-card p {
    font-size: 15px;
    color: #555;
    line-height: 1.6;
    margin: 0;
  }
  
  .external-section {
    padding: 80px 0;

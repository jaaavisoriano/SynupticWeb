<script>
  // Touch support for flip boxes on mobile
  function initTeamFlipBoxes() {
    const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
    
    if (isTouchDevice) {
      const flipBoxes = document.querySelectorAll('.team-flip-box');
      
      flipBoxes.forEach(box => {
        box.addEventListener('click', (e) => {
          // Close all other boxes
          flipBoxes.forEach(otherBox => {
            if (otherBox !== box) {
              otherBox.classList.remove('is-flipped');
            }
          });
          // Toggle current box
          box.classList.toggle('is-flipped');
        });
      });
    }
  }
  
  // Run on initial load
  initTeamFlipBoxes();
  
  // Run after Astro page transitions
  document.addEventListener('astro:page-load', initTeamFlipBoxes);
</script>

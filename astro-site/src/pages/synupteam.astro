<script>
  // Touch support for mobile team cards
  function initTeamFlipCards() {
    const container = document.querySelector('.team-grid');
    if (!container) return;
    
    if (container.hasAttribute('data-fp-initialized')) return;
    container.setAttribute('data-fp-initialized', 'true');
    
    const flipBoxes = document.querySelectorAll('.team-flip-box');
    let activeCard: HTMLElement | null = null;
    
    flipBoxes.forEach(box => {
      const element = box as HTMLElement;
      
      element.addEventListener('click', function(this: HTMLElement, e: Event) {
        if (window.matchMedia('(hover: none)').matches || window.innerWidth < 992) {
          const target = e.target as HTMLElement;
          // Updated: also ignore button clicks
          if (target.tagName.toLowerCase() === 'a' || target.closest('a') || target.tagName.toLowerCase() === 'button') {
            return;
          }

          e.preventDefault();
          e.stopPropagation(); 
          
          if (activeCard && activeCard !== this) {
            activeCard.classList.remove('is-flipped');
          }
          
          this.classList.toggle('is-flipped');
          activeCard = this.classList.contains('is-flipped') ? this : null;
        }
      });
    });
    
    document.addEventListener('click', (e: Event) => {
      if ((window.matchMedia('(hover: none)').matches || window.innerWidth < 992) && activeCard) {
        const target = e.target as HTMLElement;
        if (!target.closest('.team-flip-box')) {
          activeCard.classList.remove('is-flipped');
          activeCard = null;
        }
      }
    });
  }
  
  initTeamFlipCards();
  document.addEventListener('astro:page-load', initTeamFlipCards);
</script>

<style>
  /* ===== PREMIUM HERO SECTION ===== */
  .page-hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: var(--color-black, #0a1628);
  }

  @media (max-width: 768px) {
    .page-hero {
      min-height: 70vh;
    }
  }
  
  /* Animated gradient background */
  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg, 
      #0a1628 0%, 
      var(--color-primary) 25%, 
      #0f2240 50%, 
      var(--color-primary) 75%, 
      #0a1628 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 8s ease-in-out infinite;
  }
  
  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  /* Floating particles for premium feel */
  .floating-particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }
  
  .particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: rgba(149, 204, 165, 0.4);
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
  }
  
  .particle:nth-child(1) {
    left: 15%;
    top: 25%;
    animation-delay: 0s;
    animation-duration: 7s;
  }
  
  .particle:nth-child(2) {
    left: 75%;
    top: 50%;
    animation-delay: 1s;
    animation-duration: 8s;
  }
  
  .particle:nth-child(3) {
    left: 40%;
    top: 75%;
    animation-delay: 2s;
    animation-duration: 6s;
  }
  
  .particle:nth-child(4) {
    left: 85%;
    top: 20%;
    animation-delay: 3s;
    animation-duration: 9s;
  }
  
  .particle:nth-child(5) {
    left: 25%;
    top: 60%;
    animation-delay: 4s;
    animation-duration: 7s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0) scale(1);
      opacity: 0.3;
    }
    25% {
      transform: translateY(-30px) translateX(10px) scale(1.2);
    }
    50% {
      transform: translateY(-50px) translateX(-15px) scale(1);
      opacity: 0.8;
    }
    75% {
      transform: translateY(-20px) translateX(5px) scale(0.8);
    }
  }
  
  /* Hero overlay */
  .hero-overlay {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 85vh;
    width: 100%;
    background: linear-gradient(
      180deg,
      rgba(10, 22, 40, 0.3) 0%,
      rgba(10, 22, 40, 0.5) 50%,
      rgba(10, 22, 40, 0.7) 100%
    );
  }

  @media (max-width: 768px) {
    .hero-overlay {
      min-height: 70vh;
    }
  }
  
  /* Hero content */
  .hero-content {
    text-align: center;
    max-width: 900px;
    padding: 0 24px;
  }
  
  .hero-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 4px;
    text-transform: uppercase;
    color: var(--color-accent);
    margin-bottom: 24px;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 0.2s;
  }
  
  .hero-headline {
    font-family: 'Raleway', sans-serif;
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 700;
    color: var(--color-white);
    line-height: 1.2;
    margin-bottom: 24px;
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
  }
  
  .headline-line {
    display: block;
  }
  
  .headline-line-1 {
    opacity: 0;
    transform: translateY(20px);
    animation: revealLine 0.8s ease forwards 0.4s;
  }
  
  .headline-accent {
    display: block;
    font-size: 0.6em;
    color: var(--color-accent);
    margin: 8px 0;
    font-style: italic;
    opacity: 0;
    transform: scale(0.8);
    animation: revealAmpersand 0.6s ease forwards 0.7s;
  }
  
  .headline-line-2 {
    opacity: 0;
    transform: translateY(20px);
    animation: revealLine 0.8s ease forwards 1s;
  }
  
  @keyframes revealLine {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes revealAmpersand {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  /* Hero divider */
  .hero-divider {
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
    margin: 0 auto 24px;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 1.2s;
  }
  
  .hero-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: rgba(255, 255, 255, 0.85);
    max-width: 700px;
    margin: 0 auto 32px;
    line-height: 1.7;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 1.4s;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Hero CTA Link */
  .hero-cta-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    background: var(--color-accent);
    color: var(--color-primary);
    border-radius: 50px;
    font-family: 'Raleway', sans-serif;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 8px 30px rgba(149, 204, 165, 0.3);
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 1.6s;
  }
  
  .hero-cta-link:hover {
    background: var(--color-white);
    transform: translateY(-3px) scale(1.03);
    box-shadow: 0 12px 40px rgba(149, 204, 165, 0.4);
    color: var(--color-primary);
  }
  
  .hero-cta-link svg {
    transition: transform 0.3s ease;
  }
  
  .hero-cta-link:hover svg {
    transform: translateX(5px);
  }
  
  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 2s;
  }
  
  .scroll-mouse {
    width: 26px;
    height: 42px;
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: 15px;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }
  
  .scroll-wheel {
    width: 4px;
    height: 8px;
    background: var(--color-accent);
    border-radius: 2px;
    animation: scrollWheel 2s ease-in-out infinite;
  }
  
  @keyframes scrollWheel {
    0%, 100% {
      opacity: 1;
      transform: translateY(0);
    }
    50% {
      opacity: 0.3;
      transform: translateY(10px);
    }
  }
  
  .scroll-text {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 768px) {
    .scroll-indicator {
      display: none;
    }
    
    .hero-cta-link {
      padding: 14px 24px;
      font-size: 13px;
    }
  }
  
  /* Team Section */
  .team-section {
    padding: 80px 0;
  }
  
  .team-section h2 {
    margin-bottom: 16px;
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    margin-top: 48px;
  }
  
  @media (max-width: 1100px) {
    .team-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 850px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 575px) {
    .team-grid {
      grid-template-columns: 1fr;
      max-width: 350px;
      margin-left: auto;
      margin-right: auto;
    }
  }
  
  /* Team Flip Box */
  .team-flip-box {
    perspective: 1200px;
    min-height: 380px;
    transition: z-index 0s 1.2s;
  }
  
  .team-flip-box:hover {
    z-index: 10;
    transition: z-index 0s 0s;
  }
  
  .team-flip-box__inner {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 380px;
    transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
    transform-style: preserve-3d;
    cursor: pointer;
  }
  
  .team-flip-box:hover .team-flip-box__inner {
    transform: rotateY(180deg);
  }
  
  .team-flip-box__front,
  .team-flip-box__back {
    position: absolute;
    width: 100%;
    height: 100%;
    min-height: 380px;
    backface-visibility: hidden;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: box-shadow 0.4s cubic-bezier(0.4, 0, 0.2, 1), transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .team-flip-box:hover .team-flip-box__front {
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
  }
  
  .team-flip-box__front {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-theme);
    display: flex;
    flex-direction: column;
  }
  
  .team-flip-box__image {
    flex: 1;
    overflow: hidden;
  }
  

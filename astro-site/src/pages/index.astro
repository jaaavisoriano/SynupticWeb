---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import MainServices from '../components/sections/MainServices.astro';
import About from '../components/sections/About.astro';
import Partner from '../components/sections/Partner.astro';
import MiddleGround from '../components/sections/MiddleGround.astro';


import WhatWeAre from '../components/sections/WhatWeAre.astro';
import ClientTypes from '../components/sections/ClientTypes.astro';
import BlogCTA from '../components/sections/BlogCTA.astro';
import Contact from '../components/sections/Contact.astro';
---

<Layout 
  title="Medical Writing y Estrategia Healthcare para Agencias"
  description="Redacción científica y consultoría estratégica para agencias de comunicación y laboratorios farmacéuticos. Nos integramos en tu equipo como tu departamento científico externo."
>
  <div id="wrap_all">
    <Header />
    
    <main id="main-content">
      <Hero />
      <MainServices />
      <About />
      <Partner />
      <MiddleGround />


      <WhatWeAre />
      <ClientTypes />
      <BlogCTA />
      <Contact />
    </main>
    
    <Footer />
  </div>
</Layout>

<style>
  #wrap_all {
    overflow-x: hidden;
    padding-top: 80px; /* Account for fixed header */
  }
  
  #main-content {
    min-height: 100vh;
  }
</style>

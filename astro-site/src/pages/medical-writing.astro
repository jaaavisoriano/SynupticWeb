  }
  
  .btn--cta {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: linear-gradient(135deg, #1a3865 0%, #2c5282 100%);
    color: #ffffff;
    font-weight: 700;
    font-family: 'Raleway', sans-serif;
    padding: 18px 36px;
    border-radius: 50px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 14px;
    box-shadow: 0 8px 30px rgba(26, 56, 101, 0.3);
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .btn--cta:hover {
    background: linear-gradient(135deg, #2c5282 0%, #1a3865 100%);
    transform: translateY(-4px) scale(1.03);
    box-shadow: 0 15px 40px rgba(26, 56, 101, 0.4);
  }
  
  .btn--cta svg {
    transition: transform 0.3s ease;
  }
  
  .btn--cta:hover svg {

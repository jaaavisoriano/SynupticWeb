    width: 300px;
    height: 300px;
    bottom: -150px;
    left: -100px;
    animation: rotateCircle 25s linear infinite reverse;
  }
  
  @keyframes rotateCircle {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .areas-section h2 {
    margin-bottom: 16px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    color: var(--color-heading);
  }
  
  .areas-text {
    max-width: 750px;
    margin: 0 auto;
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s;
  }
  
  .areas-text.visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Reveal Animation */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* ===== CTA SECTION PREMIUM ===== */
  .cta-section {
    background: linear-gradient(180deg, var(--color-bg-body) 0%, var(--color-gray-light) 100%);
    padding: 100px 0;
    position: relative;
    overflow: hidden;
  }
  
  .cta-bg-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(149, 204, 165, 0.08) 1px, transparent 1px);
    background-size: 30px 30px;
    pointer-events: none;
  }
  
  .cta-section h2 {
    margin-bottom: 16px;
    color: var(--color-heading);
  }
  
  .cta-section p {
    font-size: 1.125rem;
    margin-bottom: 32px;

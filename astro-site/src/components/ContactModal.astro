---
// ContactModal.astro
---

<div id="contact-modal" class="modal-overlay" aria-hidden="true" style="display: none;">
  <div class="modal-container">
    <div class="modal-content form-card">
      <button id="close-modal" class="close-button" aria-label="Cerrar">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="modal-title">Contáctanos</h2>
      <p class="modal-subtitle">Déjanos tus datos y te responderemos lo antes posible.</p>

      <form class="contact-form" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
        <div class="form-group">
          <label for="modal-name" class="visually-hidden">Nombre</label>
          <input 
            type="text" 
            id="modal-name" 
            name="name" 
            class="form-control" 
            placeholder="Tu nombre" 
            required
          >
        </div>
        
        <div class="form-group">
          <label for="modal-email" class="visually-hidden">Email</label>
          <input 
            type="email" 
            id="modal-email" 
            name="email" 
            class="form-control" 
            placeholder="Tu email" 
            required
          >
        </div>
        
        <div class="form-group">
          <label for="modal-phone" class="visually-hidden">Teléfono</label>
          <input 
            type="tel" 
            id="modal-phone" 
            name="phone" 
            class="form-control" 
            placeholder="Tu teléfono"
          >
        </div>
        
        <div class="form-group">
          <label for="modal-message" class="visually-hidden">Mensaje</label>
          <textarea 
            id="modal-message" 
            name="message" 
            class="form-control" 
            placeholder="¿En qué podemos ayudarte?" 
            rows="4"
            required
          ></textarea>
        </div>
        
        <div class="form-checkbox">
          <input type="checkbox" id="modal-legal-1" name="legal-1" required>
          <label for="modal-legal-1">
            Acepto la <a href="/politica-privacidad/" target="_blank">política de privacidad</a>
          </label>
        </div>
        
        <div class="form-checkbox">
          <input type="checkbox" id="modal-legal-2" name="legal-2" required>
          <label for="modal-legal-2">
            He leído y consiento el tratamiento de mis datos personales
          </label>
        </div>
        
        <p class="form-legal">
            <strong>Información básica sobre protección de datos:</strong><br>
            <strong>Responsable:</strong> Sinergias en Salud MCA SL<br>
            <strong>Finalidad:</strong> Gestión de la solicitud de información<br>
            <strong>Legitimación:</strong> Consentimiento del interesado<br>
            <strong>Destinatarios:</strong> No se ceden datos a terceros<br>
            <strong>Derechos:</strong> Acceso, rectificación, supresión, portabilidad, limitación, oposición, olvido
        </p>
        
        <button type="submit" class="btn form-submit btn-shimmer">
          <span>Enviar mensaje</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  // Modal functionality
  function initModal() {
    const modal = document.getElementById('contact-modal');
    const closeBtn = document.getElementById('close-modal');
    // We will attach event listeners to buttons that trigger this modal later
    
    if (!modal || !closeBtn) return;

    function closeModal() {
      modal.setAttribute('aria-hidden', 'true');
      modal.style.display = 'none';
      document.body.style.overflow = ''; // Restore scrolling
    }

    closeBtn.addEventListener('click', closeModal);

    // Close on click outside
    modal.addEventListener('click', (e) => {
      if (e.target === modal || e.target.classList.contains('modal-container')) {
        closeModal();
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.style.display !== 'none') {
        closeModal();
      }
    });
    
    // Expose open function globally so it can be called from anywhere
    window.openContactModal = function() {
      modal.setAttribute('aria-hidden', 'false');
      modal.style.display = 'flex'; // Use flex to center
      document.body.style.overflow = 'hidden'; // Prevent scrolling background
    };
  }

  // Initialize on load and on view transitions if using Astro 3.0+ View Transitions
  document.addEventListener('astro:page-load', initModal);
  document.addEventListener('DOMContentLoaded', initModal);
</script>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
    z-index: 9999;
    display: none;
    justify-content: center;
    align-items: center;
    padding: 20px;
    opacity: 0;
    animation: fadeIn 0.3s forwards;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  .modal-container {
    width: 100%;
    max-width: 600px;
    max-height: 90vh;
    animation: slideUp 0.3s forwards;
    overflow-y: auto; /* Enable scrolling within the modal if too tall */
    
    /* Hide scrollbar for Chrome, Safari and Opera */
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }
  
  .modal-container::-webkit-scrollbar {
    display: none;
  }

  @keyframes slideUp {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  .modal-content.form-card {
    position: relative;
    background: var(--color-bg-card); /* Using theme variable */
    border: 1px solid var(--color-border-theme);
    border-radius: 16px;
    padding: 40px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    margin: 0 auto;
  }
  
  .close-button {
    position: absolute;
    top: 16px;
    right: 16px;
    background: transparent;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 8px;
    border-radius: 50%;
    transition: all 0.2s;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .close-button:hover {
    background-color: var(--color-bg-subtle);
    color: var(--color-text-heading);
  }

  .modal-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-heading);
    margin-bottom: 8px;
    text-align: center;
  }

  .modal-subtitle {
    color: var(--color-text-body);
    text-align: center;
    margin-bottom: 24px;
    font-size: 0.95rem;
  }

  /* Form Styles copied from Contact.astro and slightly adapted */
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .form-group {
    margin-bottom: 16px;
    position: relative;
  }
  
  .form-control {
    width: 100%;
    padding: 14px 18px; /* Slightly smaller padding for modal */
    font-family: inherit;
    font-size: 16px;
    border: 2px solid var(--color-border-theme);
    border-radius: 10px;
    background: var(--color-bg-input);
    color: var(--color-text-body);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .form-control:focus {
    outline: none;
    border-color: #95cca5;
    box-shadow: 0 0 0 4px rgba(149, 204, 165, 0.15);
  }
  
  .form-control::placeholder {
    color: var(--color-text-muted-light);
  }
  
  textarea.form-control {
    min-height: 100px; /* Slightly smaller height */
    resize: vertical;
  }
  
  /* Dark Mode Support */
  :global([data-theme="dark"]) .modal-content.form-card {
    background: #0f2340 !important;
    border-color: rgba(255, 255, 255, 0.1) !important;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
  }
  
  :global([data-theme="dark"]) .form-control {
    background: rgba(0, 0, 0, 0.2) !important;
    border-color: rgba(255, 255, 255, 0.1) !important;
    color: #ffffff !important;
  }
  
  :global([data-theme="dark"]) .form-control::placeholder {
    color: rgba(255, 255, 255, 0.4) !important;
  }
  
  :global([data-theme="dark"]) .modal-title {
    color: var(--color-white);
  }
  
  :global([data-theme="dark"]) .modal-subtitle {
     color: rgba(255, 255, 255, 0.85);
  }
  
  :global([data-theme="dark"]) .form-checkbox {
    color: rgba(255, 255, 255, 0.85);
  }
  
  :global([data-theme="dark"]) .form-checkbox a {
    color: #95cca5;
  }
  
  :global([data-theme="dark"]) .form-legal {
    background: transparent !important;
    color: rgba(255, 255, 255, 0.5);
    padding: 0 12px !important;
    margin: 8px 0 24px;
  }
  
  :global([data-theme="dark"]) .close-button {
    color: rgba(255, 255, 255, 0.7);
  }
  
  :global([data-theme="dark"]) .close-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: var(--color-white);
  }

  /* Checkboxes */
  .form-checkbox {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 14px;
    color: var(--color-text-body);
  }
  
  .form-checkbox input {
    margin-top: 3px;
    accent-color: #95cca5;
    width: 16px;
    height: 16px;
    cursor: pointer;
  }
  
  .form-checkbox label {
    cursor: pointer;
  }
  
  .form-checkbox a {
    color: #1a3865; /* Or a variable if available */
    text-decoration: underline;
    transition: color 0.2s ease;
  }
  
  .form-checkbox a:hover {
    color: #95cca5;
  }
  
  .form-legal {
    font-size: 11px; /* Smaller legal text */
    color: var(--color-text-muted-light);
    margin: 8px 0 24px;
    line-height: 1.6;
    padding: 12px;
    background: var(--color-bg-subtle);
    border-radius: 8px;
  }
  
  /* Submit Button */
  .form-submit {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 14px;
    background-color: var(--color-primary); /* Assuming this variable exists, otherwise hardcode #1a3865 */
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    gap: 12px;
    transition: background-color 0.3s, transform 0.2s;
  }

  .form-submit:hover {
    background-color: var(--color-primary-dark); /* Fallback might be needed */
    transform: translateY(-2px);
  }
  
  /* Ensure button is visible if var missing */
  .form-submit {
    background-color: #1a3865;
  }
  
  .btn-shimmer {
    position: relative;
    overflow: hidden;
  }
  
  .btn-shimmer::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    animation: shimmer 3s ease-in-out infinite;
  }
  
  @keyframes shimmer {
    0% { left: -100%; }
    50%, 100% { left: 100%; }
  }
  
  /* Mobile Adjustments */
  @media (max-width: 640px) {
    .modal-content.form-card {
      padding: 24px;
      border-radius: 12px;
    }
    
    .modal-title {
      font-size: 1.5rem;
    }
  }
  
  /* Accessibility */
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

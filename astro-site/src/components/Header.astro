      0 0 0 1px rgba(0, 0, 0, 0.03);
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1000;
    list-style: none;
    margin: 0;
  }


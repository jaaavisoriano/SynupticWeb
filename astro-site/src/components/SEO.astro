---
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  jsonld?: any;
}

const {
  title,
  description,
  image = '/images/logo.png',
  type = 'website',
  jsonld
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const formattedTitle = `${title} | Synuptic - Medical Writing`;
const socialImageURL = new URL(image, Astro.site);

// Esquema de Organización Global
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": ["Organization", "MedicalBusiness"],
  "name": "Sinergias en Salud S.L.",
  "url": Astro.site?.toString(),
  "logo": new URL('/images/logo.png', Astro.site).toString(),
  "image": new URL('/images/logo.png', Astro.site).toString(),
  "sameAs": [
    "https://www.linkedin.com/company/synuptic", // Placeholder, verificar si existe enlace real
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "customer service",
    "areaServed": "ES",
    "availableLanguage": "Spanish"
  }
};

// Combinar esquemas si se pasa uno específico
const finalSchema = jsonld 
  ? { "@context": "https://schema.org", "@graph": [organizationSchema, jsonld] }
  : organizationSchema;
---

<!-- SEO Global -->
<title>{formattedTitle}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={formattedTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:site_name" content="Synuptic" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={formattedTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(finalSchema)} />

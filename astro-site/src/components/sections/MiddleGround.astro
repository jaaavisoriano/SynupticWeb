---
// MiddleGround section - Between freelance and agency
---

<section class="section middle-ground-section" id="middle-ground">
  <div class="cesis_container z-relative">
    <div class="mg-content animate-fade-in">
      
      <!-- Pre-title -->
      <div class="mg-pretitle">
        <span class="pretitle-line"></span>
        <span class="pretitle-text">Nuestra filosofía</span>
        <span class="pretitle-line"></span>
      </div>
      
      <!-- Main Heading -->
      <h2 class="mg-heading">
        <span class="heading-line-1">Entre la soledad del freelance</span>
        <span class="heading-connector">y la complejidad de la agencia...</span>
      </h2>
      
      <!-- Big Statement -->
      <div class="mg-statement">
        <p class="statement-text">¡Decidimos quedarnos justo en medio!</p>
      </div>

      <!-- Visual Accent -->
      <div class="mg-accent">
        <div class="accent-dot"></div>
        <div class="accent-line"></div>
        <div class="accent-dot"></div>
      </div>

    </div>
  </div>

  <!-- Bottom Wave Divider -->
  <div class="shape-divider-bottom">
    <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
    </svg>
  </div>
</section>

<style>
  .middle-ground-section {
    position: relative;
    padding: 120px 0 160px; /* Added bottom padding for wave */
    background: #ffffff; /* Forced white to remove any mint/gray tone */
    overflow: hidden;
    margin-top: -2px;
  }
  
  :global([data-theme="dark"]) .middle-ground-section {
    background: var(--color-primary);
  }

  /* ANIMATIONS */
  .animate-fade-in {
    opacity: 0;
    animation: mgFadeIn 1s ease-out forwards;
  }
  
  @keyframes mgFadeIn {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .z-relative {
    position: relative;
    z-index: 10;
  }

  /* SHAPE DIVIDER BOTTOM */
  .shape-divider-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
  }
  
  .shape-divider-bottom svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 80px;
    transform: rotateY(180deg);
  }
  
  .shape-divider-bottom .shape-fill {
    fill: var(--color-bg-body, #ffffff);
  }

  :global([data-theme="dark"]) .shape-divider-bottom .shape-fill {
    fill: var(--color-primary);
  }

  /* CONTENT */
  .mg-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  /* PRETITLE */
  .mg-pretitle {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 40px;
  }
  
  .pretitle-line {
    width: 60px;
    height: 1px;
    background: linear-gradient(90deg, transparent, #1a3865);
  }
  
  .pretitle-line:last-child {
    background: linear-gradient(90deg, #1a3865, transparent);
  }
  
  :global([data-theme="dark"]) .pretitle-line {
    background: linear-gradient(90deg, transparent, #95cca5);
  }
  
  :global([data-theme="dark"]) .pretitle-line:last-child {
    background: linear-gradient(90deg, #95cca5, transparent);
  }
  
  .pretitle-text {
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: #1a3865;
    opacity: 0.7;
  }
  
  :global([data-theme="dark"]) .pretitle-text {
    color: #95cca5;
    opacity: 0.9;
  }

  /* MAIN HEADING */
  .mg-heading {
    font-family: 'Raleway', sans-serif;
    font-size: clamp(24px, 4vw, 38px);
    font-weight: 400;
    color: #334155;
    line-height: 1.5;
    margin-bottom: 35px;
  }
  
  :global([data-theme="dark"]) .mg-heading {
    color: rgba(255, 255, 255, 0.95);
  }
  
  .heading-line-1 {
    display: block;
    font-style: italic;
  }
  
  .heading-connector {
    display: block;
    opacity: 0.8;
  }

  /* STATEMENT */
  .mg-statement {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    margin-bottom: 50px;
    animation: mgStatementPop 0.6s ease-out 0.5s both;
  }
  
  @keyframes mgStatementPop {
    0% {
      transform: scale(0.9);
      opacity: 0;
      animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }
    50% {
      transform: scale(1.02);
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  .statement-icon {
    font-size: 32px;
    animation: mgPulse 2s ease-in-out infinite;
  }
  
  @keyframes mgPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  
  .statement-text {
    font-family: 'Raleway', sans-serif;
    font-size: clamp(28px, 5vw, 48px);
    font-weight: 800;
    background: linear-gradient(135deg, #1a3865 0%, #2563eb 50%, #1a3865 100%);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: mgGradientText 3s ease-in-out infinite;
    margin: 0;
  }
  
  :global([data-theme="dark"]) .statement-text {
    background: linear-gradient(135deg, #95cca5 0%, #ffffff 50%, #95cca5 100%);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  @keyframes mgGradientText {
    0% { background-position: 0% center; }
    50% { background-position: 100% center; }
    100% { background-position: 0% center; }
  }

  /* ACCENT DECORATION */
  .mg-accent {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    opacity: 0.6;
  }
  
  .accent-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #1a3865;
  }
  
  :global([data-theme="dark"]) .accent-dot {
    background: #95cca5;
  }
  
  .accent-line {
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, #1a3865, #95cca5, #1a3865);
    border-radius: 1px;
  }
  
  :global([data-theme="dark"]) .accent-line {
    background: linear-gradient(90deg, #95cca5, #ffffff, #95cca5);
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .middle-ground-section {
      padding: 80px 0;
    }
    
    .mg-pretitle {
      flex-direction: column;
      gap: 10px;
    }
    
    .pretitle-line {
      width: 40px;
    }
    
    .mg-statement {
      flex-direction: column;
      gap: 10px;
    }
    
    .decorative-lines {
      display: none;
    }
    
    .mg-accent {
      gap: 8px;
    }
    
    .accent-line {
      width: 60px;
    }
  }
</style>

<style>
  .partner-section {
    position: relative;
    background: #f7f9fb;
    padding: 100px 0;
    overflow: visible;
  }
  
  [data-theme="dark"] .partner-section {
    background: var(--color-bg-subtle);
  }
  
  /* ===== WAVE DIVIDERS ===== */
  .wave-divider {
    position: absolute;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    color: var(--color-bg-body);
  }
  
  .wave-top {
    top: -1px;
    transform: rotate(180deg);
  }
  
  .wave-bottom {
    bottom: -1px;
  }
  
  .wave-divider svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 60px;
  }
  
  @media (min-width: 768px) {
    .wave-divider svg {
      height: 80px;
    }
  }
  
  /* ===== CONTENT ===== */
  .partner-section .row {
    align-items: center;
  }

  @media (min-width: 768px) {
    .partner-section .partner-row {
      flex-direction: row-reverse;
    }
  }
  
  /* ===== BADGE ===== */
  .partner-badge {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: linear-gradient(135deg, #95cca5 0%, #7ab892 100%);
    padding: 12px 20px;
    border-radius: 50px;
    margin-bottom: 24px;
    box-shadow: 0 8px 24px rgba(149, 204, 165, 0.3);
  }
  
  .badge-number {
    font-family: 'Raleway', sans-serif;
    font-size: 24px;
    font-weight: 700;
    color: #1a3865;
  }
  
  .badge-label {
    font-size: 13px;
    font-weight: 600;
    color: #1a3865;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  /* ===== IMAGE ===== */
  .partner-section__image img {
    border-radius: 16px;
    box-shadow: 
      0 25px 50px rgba(0, 0, 0, 0.12),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    width: 100%;
    height: auto;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .partner-section__image:hover img {
    transform: scale(1.02) translateY(-5px);
  }
  
  @media (max-width: 767px) {
    .partner-section__image {
      margin-top: 32px;
      max-width: 90%;
      margin-left: auto;
      margin-right: auto;
    }
  }
  
  .partner-section__content {
    padding-left: 40px;
  }
  
  @media (max-width: 767px) {
    .partner-section__content {
      padding-left: 0;
    }
  }
  
  .partner-section__content h2 {
    font-size: clamp(1.5rem, 3.5vw, 1.75rem);
    line-height: 1.35;
    margin-bottom: 16px;
    color: var(--color-heading);
  }
  
  .partner-section__subtitle {
    font-size: 18px;
    color: var(--color-text-muted);
    margin: 0;
  }
  
  @media (max-width: 767px) {
    .partner-section {
      padding: 80px 0;
    }
    
    .partner-section__content h2 {
      font-size: 1.35rem;
    }
    
    .partner-section__subtitle {
      font-size: 16px;
    }
  }
</style>

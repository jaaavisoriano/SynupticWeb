<script>
  /**
   * Controlador Video Hero - Versión Robusta
   * Maneja: precarga, reintentos inteligentes, errores de red, y navegación Astro.
   */
  class HeroVideoController {
    private video: HTMLVideoElement | null;
    private attempts: number = 0;
    private maxAttempts: number = 30;
    private preloaderFinished: boolean = false;
    private loadRetries: number = 0;
    private maxLoadRetries: number = 3;
    private playInterval: ReturnType<typeof setInterval> | null = null;
    private isDestroyed: boolean = false;

    constructor(videoId: string) {
      this.video = document.getElementById(videoId) as HTMLVideoElement;
      if (this.video) {
        this.init();
      }
    }

    private init() {
      if (!this.video) return;

      // 1. Configuración Hardware-Level (Propiedades directas) - Vital para autoplay policies
      this.video.muted = true;
      this.video.defaultMuted = true;
      this.video.playsInline = true;
      
      // 2. Configuración DOM-Level (Atributos) - Refuerzo para navegadores exigentes
      this.video.setAttribute('muted', '');
      this.video.setAttribute('playsinline', '');
      this.video.setAttribute('autoplay', '');
      
      // 3. NO pausar - dejamos que el autoplay nativo funcione
      // El video debería reproducirse automáticamente con los atributos HTML

      // 4. Registrar listeners de eventos del video para diagnóstico y recuperación
      this.setupVideoEventListeners();
      
      // 5. Marcar como listo para reproducir inmediatamente
      // El preloader ya no controla la reproducción del video
      this.preloaderFinished = true;
      
      // 6. Intentar reproducción inmediata como respaldo si autoplay falla
      // Pequeño delay para dar tiempo a que el DOM esté listo
      requestAnimationFrame(() => {
        if (this.isDestroyed) return;
        if (this.video?.paused) {
          console.log('[HeroCtrl] Autoplay nativo no funcionó. Forzando reproducción...');
          this.forcePlay();
        } else {
          console.log('[HeroCtrl] ✓ Video reproduciéndose via autoplay nativo.');
        }
      });

      // 7. Listeners de respaldo por si el navegador bloquea autoplay
      this.setupFallbackListeners();
    }

    private setupVideoEventListeners() {
      if (!this.video) return;

      // Evento cuando el video tiene suficientes datos para reproducirse
      this.video.addEventListener('canplaythrough', () => {
        if (this.isDestroyed) return;
        console.log('[HeroCtrl] Video listo para reproducirse (canplaythrough).');
        if (this.preloaderFinished) {
          this.startForceLoop();
        }
      });

      // Evento cuando el video comienza a reproducirse
      this.video.addEventListener('playing', () => {
        if (this.isDestroyed) return;
        console.log('[HeroCtrl] Video en reproducción.');
        this.video?.classList.add('is-playing');
        this.clearPlayInterval();
      });

      // Evento de error en la carga del video
      this.video.addEventListener('error', (e) => {
        if (this.isDestroyed) return;
        console.warn('[HeroCtrl] Error en el video:', this.video?.error?.message || 'Unknown error');
        this.handleVideoError();
      });

      // Evento cuando el video se ha pausado inesperadamente
      this.video.addEventListener('pause', () => {
        if (this.isDestroyed) return;
        // Solo reintentar si el video debería estar reproduciéndose
        if (this.preloaderFinished && document.visibilityState === 'visible') {
          setTimeout(() => {
            if (!this.isDestroyed && this.video?.paused) {
              console.log('[HeroCtrl] Video pausado inesperadamente. Reintentando...');
              this.forcePlay();
            }
          }, 100);
        }
      });

      // Evento de espera (buffering)
      this.video.addEventListener('waiting', () => {
        if (this.isDestroyed) return;
        console.log('[HeroCtrl] Video en espera (buffering)...');
      });

      // Evento stalled - la carga se ha detenido
      this.video.addEventListener('stalled', () => {
        if (this.isDestroyed) return;
        console.warn('[HeroCtrl] La carga del video se ha estancado.');
        this.handleVideoError();
      });
    }

    private setupFallbackListeners() {
      const visibilityHandler = () => {
        if (this.isDestroyed) return;
        if (document.visibilityState === 'visible' && this.preloaderFinished) {
          this.forcePlay();
        }
      };

      const interactionHandler = () => {
        if (this.isDestroyed) return;
        if (this.preloaderFinished) this.forcePlay();
      };

      document.addEventListener('visibilitychange', visibilityHandler);
      document.addEventListener('click', interactionHandler, { once: true, passive: true });
      document.addEventListener('scroll', interactionHandler, { once: true, passive: true });
      document.addEventListener('touchstart', interactionHandler, { once: true, passive: true });
    }

    private ensureVideoLoaded() {
      if (!this.video || this.isDestroyed) return;

      // Si el video ya tiene datos, intentar reproducir
      if (this.video.readyState >= 3) { // HAVE_FUTURE_DATA o superior
        console.log('[HeroCtrl] Video ya tiene datos (readyState:', this.video.readyState, ')');
        this.startForceLoop();
        return;
      }

      // Si no, forzar la carga
      console.log('[HeroCtrl] Forzando carga del video (readyState:', this.video.readyState, ')');
      
      // Asegurar que la fuente está correcta
      const source = this.video.querySelector('source');
      if (source && !this.video.src) {
        this.video.src = source.getAttribute('src') || '';
      }
      
      this.video.load();
      
      // Timeout de seguridad si la carga tarda demasiado
      setTimeout(() => {
        if (this.isDestroyed) return;
        if (this.video && this.video.readyState < 1) {
          console.warn('[HeroCtrl] Timeout de carga inicial. Reintentando...');
          this.handleVideoError();
        } else if (this.video && this.video.paused && this.preloaderFinished) {
          this.startForceLoop();
        }
      }, 3000);
    }

    private handleVideoError() {
      if (this.isDestroyed) return;
      
      this.loadRetries++;
      
      if (this.loadRetries <= this.maxLoadRetries) {
        console.log(`[HeroCtrl] Reintentando carga del video (${this.loadRetries}/${this.maxLoadRetries})...`);
        
        setTimeout(() => {
          if (this.isDestroyed || !this.video) return;
          
          // Resetear el video
          const currentSrc = this.video.querySelector('source')?.getAttribute('src') || '/videos/synuptic-video.mp4';
          
          // Añadir un cache-buster para forzar nueva petición
          const cacheBuster = `?t=${Date.now()}`;
          const source = this.video.querySelector('source');
          if (source) {
            source.setAttribute('src', currentSrc.split('?')[0] + cacheBuster);
          }
          
          this.video.load();
        }, 1000 * this.loadRetries); // Backoff exponencial
      } else {
        console.error('[HeroCtrl] Max reintentos alcanzados. El video no pudo cargarse.');
        // Opcional: mostrar un mensaje o imagen de fallback
        this.video?.classList.add('video-error');
      }
    }

    private clearPlayInterval() {
      if (this.playInterval) {
        clearInterval(this.playInterval);
        this.playInterval = null;
      }
    }

    private startForceLoop() {
      if (!this.preloaderFinished || this.isDestroyed) return;
      
      this.clearPlayInterval();
      this.attempts = 0;
      
      // Intentamos reproducir inmediatamente
      this.forcePlay();

      // Y programamos reintentos
      this.playInterval = setInterval(() => {
        if (this.isDestroyed) {
          this.clearPlayInterval();
          return;
        }

        if (this.video && !this.video.paused) {
          console.log('[HeroCtrl] ✓ Video arrancado correctamente.');
          this.clearPlayInterval();
          this.video.classList.add('is-playing');
          return;
        }

        if (this.attempts >= this.maxAttempts) {
          console.warn('[HeroCtrl] Autoplay timeout. Se requiere interacción del usuario.');
          this.clearPlayInterval();
          return;
        }

        this.forcePlay();
        this.attempts++;
      }, 200);
    }

    private async forcePlay() {
      if (!this.video || this.isDestroyed) return;
      if (!this.video.paused) return; // Ya está reproduciendo
      if (!this.preloaderFinished) return;
      
      // Re-asegurar mute (vital para Chrome/Safari autoplay policy)
      this.video.muted = true;
      
      try {
        // Verificar readyState suficiente
        if (this.video.readyState >= 2) { // HAVE_CURRENT_DATA o superior
          const playPromise = this.video.play();
          if (playPromise !== undefined) {
            await playPromise;
          }
        } else if (this.video.readyState === 0) {
          // No hay datos, forzar carga
          console.log('[HeroCtrl] Video sin datos, forzando carga...');
          this.ensureVideoLoaded();
        }
        // Si readyState es 1, esperar a que cargue más datos
      } catch (err: any) {
        // Solo loguear errores que no sean de autoplay
        if (err.name !== 'NotAllowedError' && err.name !== 'AbortError') {
          console.warn('[HeroCtrl] Error al reproducir:', err.message);
        }
      }
    }

    // Método público para destruir el controlador (útil en navegación)
    public destroy() {
      this.isDestroyed = true;
      this.clearPlayInterval();
      console.log('[HeroCtrl] Controlador destruido.');
    }
  }

  // --- Lightbox Logic ---
  function initLightbox() {
    const elements = {
      openBtn: document.getElementById('open-lightbox'),
      closeBtn: document.getElementById('close-lightbox'),
      lightbox: document.getElementById('video-lightbox'),
      overlay: document.getElementById('lightbox-overlay'),
      video: document.getElementById('lightbox-video') as HTMLIFrameElement
    };
    
    if (!elements.openBtn) return;
    
    const { openBtn, closeBtn, lightbox, overlay, video } = elements;
    const vimeoUrl = 'https://player.vimeo.com/video/902229971?autoplay=1&loop=0&muted=0&quality=1080p';
    
    const toggle = (open: boolean) => {
      if (open) {
        video.src = vimeoUrl;
        lightbox.classList.add('is-open');
        lightbox.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
      } else {
        lightbox.classList.remove('is-open');
        lightbox.setAttribute('aria-hidden', 'true');
        video.src = '';
        document.body.style.overflow = '';
      }
    };
    
    openBtn.addEventListener('click', () => toggle(true));
    closeBtn.addEventListener('click', () => toggle(false));
    overlay.addEventListener('click', () => toggle(false));
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && lightbox.classList.contains('is-open')) toggle(false);
    });
  }

  // --- Inicialización ---
  const launch = () => {
    // Destruir controlador anterior si existe (navegación interna Astro)
    // @ts-ignore
    if (window.heroCtrl && typeof window.heroCtrl.destroy === 'function') {
      // @ts-ignore
      window.heroCtrl.destroy();
    }
    
    initLightbox();
    // @ts-ignore
    window.heroCtrl = new HeroVideoController('main-hero-video');
  };

  // Limpiar al navegar fuera de la página
  document.addEventListener('astro:before-swap', () => {
    // @ts-ignore
    if (window.heroCtrl && typeof window.heroCtrl.destroy === 'function') {
      // @ts-ignore
      window.heroCtrl.destroy();
    }
  });

  document.addEventListener('astro:page-load', launch);
  document.addEventListener('DOMContentLoaded', launch);
</script>


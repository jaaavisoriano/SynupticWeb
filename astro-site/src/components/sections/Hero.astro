        <div class="scroll-wheel"></div>
      </div>
      <span class="scroll-text">Scroll</span>
    </div>
  </div>
</section>

<!-- Fullscreen Video Lightbox Modal -->
<div class="video-lightbox" id="video-lightbox" aria-hidden="true">
  <div class="lightbox-overlay" id="lightbox-overlay"></div>
  <div class="lightbox-content">
    <button class="lightbox-close" id="close-lightbox" aria-label="Cerrar video">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <div class="lightbox-video-wrapper">
      <iframe 
        id="lightbox-video"
        src=""
        frameborder="0"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
        title="Synuptic Video Fullscreen"
      ></iframe>
    </div>
  </div>
</div>

<script>
  /**
   * Controlador Video Hero - Versión Agresiva (Safe Autoplay)
   * Prioridad absoluta: que arranque al cargar.
   */
  class HeroVideoController {
    private video: HTMLVideoElement | null;
    private attempts: number = 0;
    private maxAttempts: number = 20; // Intentar durante ~3 segundos aprox

    constructor(videoId: string) {
      this.video = document.getElementById(videoId) as HTMLVideoElement;
      if (this.video) {
        this.init();
      }
    }

    private init() {
      if (!this.video) return;

      // 1. Configuración Hardware-Level (Propiedades directas)
      this.video.muted = true;
      this.video.defaultMuted = true;
      this.video.playsInline = true;
      
      // 2. Configuración DOM-Level (Atributos)
      // Importante: setAttribute fuerza al navegador a reconocer el estado
      this.video.setAttribute('muted', '');
      this.video.setAttribute('playsinline', '');
      this.video.setAttribute('autoplay', '');

      // 3. Estrategia de Arranque Inmediato (Loop Polling)
      // No confiamos solo en eventos. Insistimos un poco al principio.
      this.startForceLoop();

      // 4. Listeners de respaldo
      // Si por alguna razón el loop falla, el cambio de pestaña o click nos salva
      document.addEventListener('visibilitychange', () => {
         if (document.visibilityState === 'visible') this.forcePlay();
      });
      document.addEventListener('click', () => this.forcePlay(), { once: true, passive: true });
      document.addEventListener('scroll', () => this.forcePlay(), { once: true, passive: true });
    }

    private startForceLoop() {
      // Intentamos reproducir inmediatamente
      this.forcePlay();

      // Y programamos reintentos rápidos
      const interval = setInterval(() => {
        if (this.video && !this.video.paused) {
          console.log('[HeroCtrl] Video arrancado correctamente. Deteniendo loop.');
          clearInterval(interval);
          this.video.classList.add('is-playing');
          return;
        }

        if (this.attempts >= this.maxAttempts) {
          console.warn('[HeroCtrl] Autoplay timeout. Esperando interacción.');
          clearInterval(interval);
          return;
        }

        this.forcePlay();
        this.attempts++;
      }, 150);
    }

    private async forcePlay() {
      if (!this.video || !this.video.paused) return;
      
      // Re-asegurar mute en cada intento (vital para Chrome/Safari)
      this.video.muted = true; 
      
      try {
        // Reset genérico por si el video está "terminado" o atascado
        if (this.video.readyState >= 1) {
             const playPromise = this.video.play();
             if (playPromise !== undefined) {
                 await playPromise;
             }
        } else {
             this.video.load(); // Kickstart si está en readyState 0
        }
      } catch (err) {
        // Silenciamos errores de consola para no ensuciar, 
        // ya sabemos que estamos forzando.
      }
    }
  }

  // --- Lightbox Logic ---
  function initLightbox() {
    const elements = {
      openBtn: document.getElementById('open-lightbox'),
      closeBtn: document.getElementById('close-lightbox'),
      lightbox: document.getElementById('video-lightbox'),
      overlay: document.getElementById('lightbox-overlay'),
      video: document.getElementById('lightbox-video') as HTMLIFrameElement
    };
    
    if (!elements.openBtn) return;
    
    const { openBtn, closeBtn, lightbox, overlay, video } = elements;
    const vimeoUrl = 'https://player.vimeo.com/video/902229971?autoplay=1&loop=0&muted=0&quality=1080p';
    
    const toggle = (open: boolean) => {
      if (open) {
        video.src = vimeoUrl;
        lightbox.classList.add('is-open');
        lightbox.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
      } else {
        lightbox.classList.remove('is-open');
        lightbox.setAttribute('aria-hidden', 'true');
        video.src = '';
        document.body.style.overflow = '';
      }
    };
    
    openBtn.addEventListener('click', () => toggle(true));
    closeBtn.addEventListener('click', () => toggle(false));
    overlay.addEventListener('click', () => toggle(false));
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && lightbox.classList.contains('is-open')) toggle(false);
    });
  }

  // --- Inicialización ---
  const launch = () => {
    initLightbox();
    // @ts-ignore
    window.heroCtrl = new HeroVideoController('main-hero-video');
  };

  document.addEventListener('astro:page-load', launch);
  document.addEventListener('DOMContentLoaded', launch);
</script>

<style>
  .video-intro {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #0a1628;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .video-intro {
      min-height: 60vh;
    }
  }
  
  /* ===== VIDEO CONTAINER STYLES ===== */
  .video-container {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: #0a1628;
  }

  #main-hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    pointer-events: none; /* Crucial para evitar pausas por clic */
    
    /* Aseguramos que el video ocupe espacio incluso si no ha cargado */
    display: block; 
    background: #0a1628;
  }
  
  /* Responsive adjustments if needed */
  @media (max-width: 768px) {
    #main-hero-video {
      object-fit: cover;
    }
  }
  
  /* ===== HERO OVERLAY ===== */
  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      180deg,
      rgba(10, 22, 40, 0.4) 0%,
      rgba(10, 22, 40, 0.6) 50%,
      rgba(10, 22, 40, 0.8) 100%
    );
  }
  
  /* ===== HERO CONTENT ===== */
  .hero-content {
    text-align: center;
    max-width: 900px;
    padding: 0 24px;
    /* Content is now visible immediately */
    opacity: 1;
    transform: translateY(0);
  }
  
  .hero-headline {
    font-family: 'Raleway', sans-serif;
    font-size: clamp(2rem, 6vw, 4rem);
    font-weight: 700;
    color: #ffffff;
    line-height: 1.1;
    margin-bottom: 24px;
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
  }
  
  .headline-line {
    display: block;
  }
  
  .headline-line-1 {
    opacity: 0;
    transform: translateY(20px);
    animation: revealLine 0.8s ease forwards 0.3s;
  }
  
  .headline-ampersand {
    display: block;
    font-size: 0.5em;
    color: #95cca5;
    margin: 8px 0;
    opacity: 0;
    transform: scale(0.8);
    animation: revealAmpersand 0.6s ease forwards 0.6s;
  }
  
  .headline-line-2 {
    opacity: 0;
    transform: translateY(20px);
    animation: revealLine 0.8s ease forwards 0.9s;
  }
  
  @keyframes revealLine {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes revealAmpersand {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  .hero-subline {
    font-size: clamp(1rem, 2.5vw, 1.35rem);
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 40px;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 1.2s;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* ===== CTA GROUP ===== */
  .hero-cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: center;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 1.5s;
  }

  @media (max-width: 768px) {
    .headline-line-1 { animation-delay: 0.1s; }
    .headline-ampersand { animation-delay: 0.2s; }
    .headline-line-2 { animation-delay: 0.3s; }
    .hero-subline { animation-delay: 0.4s; }
    .hero-cta-group { animation-delay: 0.5s; }
  }
  
  .hero-play-btn {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 16px 28px;
    background: #95cca5;
    color: #1a3865;
    border: none;
    border-radius: 50px;
    font-family: 'Raleway', sans-serif;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 8px 30px rgba(149, 204, 165, 0.3);
  }
  
  .hero-play-btn:hover {
    background: #ffffff;
    transform: translateY(-3px) scale(1.03);
    box-shadow: 0 12px 40px rgba(149, 204, 165, 0.4);
  }
  
  .hero-play-btn svg {
    transition: transform 0.3s ease;
  }
  
  .hero-play-btn:hover svg {
    transform: scale(1.15);
  }
  
  .hero-cta-link {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 16px 28px;
    background: transparent;
    color: #ffffff;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    font-family: 'Raleway', sans-serif;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .hero-cta-link:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    transform: translateY(-3px);
  }
  
  .hero-cta-link svg {
    transition: transform 0.3s ease;
  }
  
  .hero-cta-link:hover svg {
    transform: translateX(5px);
  }
  
  /* ===== SCROLL INDICATOR ===== */
  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 2s;
  }
  
  .scroll-mouse {
    width: 26px;
    height: 42px;
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: 15px;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }
  
  .scroll-wheel {
    width: 4px;
    height: 8px;
    background: #95cca5;
    border-radius: 2px;
    animation: scrollWheel 2s ease-in-out infinite;
  }
  
  @keyframes scrollWheel {
    0%, 100% {
      opacity: 1;
      transform: translateY(0);
    }
    50% {
      opacity: 0.3;
      transform: translateY(10px);
    }
  }
  
  .scroll-text {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: rgba(255, 255, 255, 0.5);
  }
  
  @media (max-width: 768px) {
    .scroll-indicator {
      bottom: 24px;
      display: none;
    }
    
    .hero-cta-group {
      flex-direction: column;
      width: 100%;
      padding: 0 20px;
    }
    
    .hero-play-btn,
    .hero-cta-link {
      width: 100%;
      justify-content: center;
    }
  }
  
  /* ===== LIGHTBOX MODAL ===== */
  .video-lightbox {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                visibility 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .video-lightbox.is-open {
    opacity: 1;
    visibility: visible;
  }
  
  .lightbox-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    cursor: pointer;
  }
  
  .lightbox-content {
    position: relative;
    width: 90vw;
    max-width: 1400px;
    z-index: 1;
    transform: scale(0.9) translateY(20px);
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .video-lightbox.is-open .lightbox-content {
    transform: scale(1) translateY(0);
  }
  
  .lightbox-close {
    position: absolute;
    top: -50px;
    right: 0;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }
  
  .lightbox-close:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    transform: rotate(90deg);
  }
  
  .lightbox-video-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    background: #000;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5);
  }
  
  .lightbox-video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  @media (max-width: 768px) {
    .lightbox-content {
      width: 95vw;
    }
    
    .lightbox-close {
      top: -45px;
      right: 5px;
      width: 38px;
      height: 38px;
    }
    
    .lightbox-close svg {
      width: 24px;
      height: 24px;
      }
  }
</style>

      (function() {
        var v = document.getElementById('main-hero-video');
        if (v) {
          v.muted = true;
          v.play().catch(function() {});
          // Segundo intento con delay
          setTimeout(function() {
            if (v.paused) { v.muted = true; v.play().catch(function() {}); }
          }, 100);
          // Tercer intento
          setTimeout(function() {
            if (v.paused) { v.muted = true; v.play().catch(function() {}); }

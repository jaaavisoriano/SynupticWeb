      autoplay 
      muted 
      loop 
      playsinline 
      webkit-playsinline
      preload="auto"
    >
      <source src="/videos/synuptic-video.mp4" type="video/mp4">
      <!-- Fallback message -->
      Tu navegador no soporta video HTML5.
    </video>

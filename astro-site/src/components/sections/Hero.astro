---
// Hero section with video background
---

<section class="video-intro section">
  <div class="video-intro__overlay"></div>
  <div class="video-intro__content">
    <a 
      href="https://vimeo.com/902229971" 
      class="play-button"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Ver video completo"
    >
      <svg width="30" height="30" viewBox="0 0 24 24" fill="currentColor">
        <path d="M8 5v14l11-7z"/>
      </svg>
    </a>
  </div>
</section>

<style>
  .video-intro {
    position: relative;
    min-height: 65vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a3865 0%, #2a4a7a 100%);
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .video-intro {
      min-height: 40vh;
    }
  }
  
  .video-intro__overlay {
    position: absolute;
    inset: 0;
    background: url('/images/acuarela_alta.jpg') center/cover no-repeat;
    opacity: 0.3;
  }
  
  .video-intro__content {
    position: relative;
    z-index: 10;
    text-align: center;
  }
  
  .play-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: #95cca5;
    color: #1a3865;
    cursor: pointer;
    transition: all 0.5s var(--timing-premium);
    box-shadow: 
      0 0 20px rgba(149, 204, 165, 0.4),
      0 0 40px rgba(149, 204, 165, 0.2);
    text-decoration: none;
    animation: playPulse 2.5s ease-in-out infinite;
  }
  
  .play-button:hover {
    background: #afccb5;
    transform: scale(1.15);
    box-shadow: 
      0 0 30px rgba(149, 204, 165, 0.6),
      0 0 60px rgba(149, 204, 165, 0.3);
  }
  
  @keyframes playPulse {
    0%, 100% {
      box-shadow: 
        0 0 20px rgba(149, 204, 165, 0.4),
        0 0 40px rgba(149, 204, 165, 0.2);
    }
    50% {
      box-shadow: 
        0 0 35px rgba(149, 204, 165, 0.6),
        0 0 60px rgba(149, 204, 165, 0.3);
    }
  }
  
  .play-button svg {
    margin-left: 4px;
    transition: transform 0.3s var(--timing-elastic);
  }
  
  .play-button:hover svg {
    transform: scale(1.1);
  }
</style>

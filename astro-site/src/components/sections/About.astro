---
// About section - "Más que tu medical writer de confianza" - Premium version
import { Image } from 'astro:assets';
import aboutImage from '../../assets/Multidisci_800x600-1.jpg';
---

<section class="section about-section" id="about">
  <div class="cesis_container">
    <div class="about-grid">
      <div class="about-section__content reveal-left">
        <!-- Stats badge -->
        <div class="about-stats">
          <span class="stat-number" data-target="10">0</span>
          <span class="stat-text">años de<br>experiencia</span>
        </div>
        
        <h2>Más que tu medical writer de confianza</h2>
        <div class="line-divider"></div>
        <p>
          Creamos <strong>textos médicos y diseñamos estrategias <em>healthcare</em></strong> 
          como si fuéramos parte de tu departamento científico. Conocemos la <strong>ciencia</strong> 
          por formación y el <strong>marketing farmacéutico</strong> por experiencia. Porque llevamos 
          más de 10 años trabajando para unir la rigurosidad a la creatividad de las 
          <strong>agencias del sector salud</strong>.
        </p>
        <a href="#contact" class="btn btn-pulse">
          <span class="btn-icon">✉</span>
          <span>Quiero conoceros</span>
        </a>
      </div>
      <div class="about-section__image reveal-scale">
        <div class="image-glow"></div>
        <Image 
          src={aboutImage}
          alt="Equipo multidisciplinar de Synuptic trabajando en proyectos de medical writing y estrategia healthcare"
          width={800}
          height={600}
          loading="lazy"
          format="webp"
          quality={85}
        />
      </div>
    </div>
  </div>
</section>

<script>
  // Animated counter for stats
  function animateCounter() {
    const counters = document.querySelectorAll('.stat-number');
    
    const isMobile = window.innerWidth < 768;
    
    // Force visibility on mobile for cascade effect (connects with Hero animation)
    if (isMobile) {
      const content = document.querySelector('.about-section__content');
      if (content) {
        // Add visible class slightly after Hero animations start finishing
        setTimeout(() => {
          content.classList.add('visible');
          // Also set transition delay to 0 to ensure it appears immediately
          (content as HTMLElement).style.transitionDelay = '0s';
        }, 600);
      }
    }

    const observerOptions = {
      threshold: isMobile ? 0.3 : 0.5,
      rootMargin: '0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const counter = entry.target as HTMLElement;
          const target = parseInt(counter.dataset.target || '0');
          const duration = 1000;
          const startTime = performance.now();
          
          const updateCounter = (currentTime: number) => {
            const elapsed = currentTime - startTime;
            const progress = Math.min(elapsed / duration, 1);
            
            // Use easeOutQuart for a natural but quicker finish feel
            const ease = 1 - Math.pow(1 - progress, 4);
            
            // Use round so we snap to the target number (10) as soon as we are close enough
            // This prevents the counter from "getting stuck" on 9
            let currentValue = Math.round(target * ease);
            
            if (currentValue > target) currentValue = target;
            
            counter.textContent = '+' + currentValue;
            
            // Trigger flash exactly when we hit the target
            if (currentValue === target && !counter.classList.contains('flash-effect')) {
              counter.classList.add('flash-effect');
            }
            
            if (progress < 1) {
              requestAnimationFrame(updateCounter);
            }
          };

          
          requestAnimationFrame(updateCounter);
          observer.unobserve(counter);
        }
      });
    }, observerOptions);
    
    counters.forEach(counter => observer.observe(counter));
  }
  
  animateCounter();
  document.addEventListener('astro:page-load', animateCounter);
</script>

<style>
  .about-section {
    background: var(--color-bg-body);
    padding: 100px 0;
  }
  
  /* ===== GRID LAYOUT ===== */
  .about-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
  }
  
  @media (min-width: 768px) {
    .about-grid {
      grid-template-columns: 1fr 1.1fr;
      gap: 30px;
    }
  }

  @media (min-width: 992px) {
    .about-grid {
      grid-template-columns: 1fr 1.2fr;
      gap: 60px;
    }
  }
  
  /* ===== STATS BADGE ===== */
  .about-stats {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: linear-gradient(135deg, #1a3865 0%, #2a5a8a 100%);
    padding: 12px 24px;
    border-radius: 12px;
    margin-bottom: 24px;
    box-shadow: 0 10px 30px rgba(26, 56, 101, 0.2);
  }
  
  .stat-number {
    font-family: 'Raleway', sans-serif;
    font-size: 48px;
    font-weight: 700;
    color: #95cca5;
    line-height: 1;
  }
  
  .stat-text {
    font-size: 13px;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.95);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    line-height: 1.4;
  }
  
  .flash-effect {
    animation: numberFlash 0.5s ease-out forwards;
  }
  
  @keyframes numberFlash {
    0% {
      text-shadow: 0 0 0 rgba(255, 255, 255, 0);
      transform: scale(1);
    }
    50% {
      text-shadow: 0 0 20px #fff, 0 0 40px #95cca5;
      color: #fff;
      transform: scale(1.15);
    }
    100% {
      text-shadow: 0 0 0 rgba(255, 255, 255, 0);
      transform: scale(1);
    }
  }
  
  /* ===== CONTENT ===== */
  .about-section__content {
    padding-right: 0;
  }
  
  @media (min-width: 768px) {
    .about-section__content {
      padding-right: 20px;
    }
  }
  
  .about-section__content h2 {
    font-size: clamp(1.75rem, 4vw, 2rem);
    line-height: 1.2;
    margin-bottom: 16px;
    color: var(--color-heading);
  }
  
  .about-section__content p {
    font-size: 17px;
    line-height: 1.8;
    color: var(--color-text-body);
    margin-bottom: 32px;
  }
  
  .about-section__content p strong {
    color: var(--color-heading);
  }
  
  /* ===== BUTTON ===== */
  .btn-pulse {
    position: relative;
  }
  
  .btn-pulse::after {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 8px;
    background: linear-gradient(90deg, #95cca5, #1a3865, #95cca5);
    background-size: 200% 100%;
    z-index: -1;
    opacity: 0;
    animation: btnPulseGlow 3s ease-in-out infinite;
  }
  
  @keyframes btnPulseGlow {
    0%, 100% {
      opacity: 0;
      background-position: 200% 0;
    }
    50% {
      opacity: 0.5;
      background-position: 0% 0;
    }
  }
  
  /* ===== IMAGE STYLES ===== */
  .about-section__image {
    position: relative;
  }
  
  .image-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(
      ellipse at center,
      rgba(149, 204, 165, 0.15) 0%,
      transparent 70%
    );
    z-index: 0;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  
  .about-section__image:hover .image-glow {
    opacity: 1;
  }
  
  .about-section__image img {
    position: relative;
    z-index: 1;
    border-radius: 12px;
    box-shadow: 
      0 20px 50px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    width: 100%;
    height: auto;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), 
                box-shadow 0.6s ease;
  }
  
  .about-section__image:hover img {
    transform: scale(1.02) translateY(-5px);
    box-shadow: 
      0 30px 60px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(149, 204, 165, 0.2);
  }
  
  @media (max-width: 991px) {
    .about-section {
      padding: 60px 0;
    }
  }

  @media (max-width: 767px) {
    .about-section__image {
      width: 75%;
      max-width: 400px;
      margin: 0 auto;
    }
  }
</style>

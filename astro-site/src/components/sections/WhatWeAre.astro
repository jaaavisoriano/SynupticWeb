---
// What we are / aren't section
// What we are / aren't section
const whatWeAre = [
  'Redactores médicos expertos en el sector salud',
  'Personas con experiencia en investigación, asistencia sanitaria, industria farmacéutica y marketing healthcare',
  'Un equipo amplio, coordinado y con diferentes perfiles biosanitarios',
  'Un partner científico de confianza para tus proyectos healthcare',
];

const whatWeAreNot = [
  'Una agencia de publicidad dedicada al marketing farmacéutico',
  'Una base de datos de redactores médicos freelance',
  'Una consultora de comunicación y relaciones públicas del sector healthcare',
  'Una agencia de traducción de textos médicos o científicos',
];
---

<section class="section what-section">
  <div class="cesis_container">
    <div class="row stagger-premium">
      <div class="col-sm-4 what-col">
        <div class="what-section__card reveal">
          <h3>¿Qué somos?</h3>
          <div class="line-divider"></div>
          <ul>
            {whatWeAre.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      </div>
      
      <div class="col-sm-4 image-col">
        <div class="what-section__image reveal-scale">
          <img 
            src="/images/Que-somos_600x800-1.jpg" 
            alt="Equipo de trabajo"
            width="600"
            height="800"
            loading="lazy"
          >
        </div>
      </div>
      
      <div class="col-sm-4 not-what-col">
        <div class="what-section__card reveal">
          <h3>¿Qué no somos?</h3>
          <div class="line-divider"></div>
          <ul>
            {whatWeAreNot.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .what-section {
    background: var(--color-bg-body);
    padding: 80px 0;
  }
  
  .what-section .row {
    align-items: stretch;
    display: flex;
    flex-wrap: wrap;
  }
  
  .what-section__card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-theme);
    border-radius: 8px;
    padding: 32px;
    height: 100%;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .what-section__card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }
  
  .what-section__card h3 {
    font-size: 24px;
    margin-bottom: 16px;
    text-align: center;
    color: var(--color-heading);
  }
  
  .what-section__card .line-divider {
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 24px;
    height: 2px;
    width: 60px;
    background-color: #95cca5;
  }
  
  .what-section__card ul {
    text-align: left;
    padding-left: 0;
    list-style: none;
  }
  
  .what-section__card ul li {
    position: relative;
    padding-left: 24px;
    margin-bottom: 16px;
    font-size: 16px;
    line-height: 1.6;
    color: var(--color-text-muted);
    font-weight: 400;
  }
  
  .what-section__card ul li::before {
    content: '—';
    position: absolute;
    left: 0;
    color: #95cca5;
    font-weight: bold;
  }
  
  .what-section__image {
    height: 100%;
    min-height: 400px;
  }
  
  .what-section__image img {
    border-radius: 8px;
    width: 100%;
    height: 100%;
    object-fit: cover;
    box-shadow: 0 10px 40px rgba(0,0,0,0.15);
  }
  
  /* Desktop Order: What Not (Left) - Image (Center) - What We Are (Right) */
  .not-what-col {
    order: 1;
  }
  .image-col {
    order: 2;
  }
  .what-col {
    order: 3;
  }
  
  @media (max-width: 767px) {
    .what-col {
      order: 1;
    }
    .not-what-col {
      order: 3;
    }
    .image-col {
      order: 2;
    }

    .what-section__image {
      margin: 24px auto;
      min-height: auto;
      max-width: 180px;
      height: auto;
    }

    .what-section__image img {
        aspect-ratio: 3/4;
    }
    
    .what-section__card {
      margin-bottom: 24px;
      padding: 24px;
    }
  }
</style>
